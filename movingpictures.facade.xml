<window>
  <controls>
      <control>
      <type>facadeview</type>
      <id>51</id>
      <control>        
        <description>Category list</description>
        <type>listcontrol</type>
        <id>50</id>
        <onleft>2</onleft>
        <onright>2</onright>
		<width>490</width>		
        <posX>786</posX>
        <posY>317</posY>
        <height>360</height>
        <textXOff>0</textXOff>
        <spinPosX>-50</spinPosX>
        <spinPosY>-50</spinPosY>
        <spinAlign>Right</spinAlign>
        <spinColor>ff006698</spinColor>
        <spinCanFocus>no</spinCanFocus>
      </control>
	</control>
    <control>
      <type>facadeview</type>
      <id>50</id>
      <control>
        <visible>Control.IsVisible(50)</visible>
        <description>Movie List</description>
        <type>listcontrol</type>
        <id>50</id>
        <onleft>2</onleft>
        <onright>2</onright>
		<width>490</width>		
        <posX>786</posX>
        <posY>317</posY>
        <height>360</height>
        <textXOff>0</textXOff>
        <spinPosX>-50</spinPosX>
        <spinPosY>-50</spinPosY>
        <spinAlign>Right</spinAlign>
        <spinColor>ff006698</spinColor>
        <spinCanFocus>no</spinCanFocus>
      </control>
      <control>
        <visible>Control.IsVisible(50)</visible>
        <description>Filmstrip view</description>
        <type>filmstrip</type>
        <id>50</id>
        <onup>2</onup>
        <posX>12</posX>
        <posY>512</posY>
        <width>1280</width>
        <scrollOffset>4</scrollOffset>
        <spinPosX>1300</spinPosX>
        <spinPosY>720</spinPosY>
        <spinWidth>24</spinWidth>
        <spinHeight>24</spinHeight>
        <spinColor>ffcccccc</spinColor>
        <itemWidth>142</itemWidth>
        <itemHeight>156</itemHeight>
        <textureWidth>120</textureWidth>
        <textureHeight>170</textureHeight>
        <thumbWidth>106</thumbWidth>
        <thumbHeight>156</thumbHeight>
        <thumbPosX>7</thumbPosX>
        <thumbPosY>7</thumbPosY>
        <thumbs flipY="true" diffuse="diffusemirrorwide.png" />
        <InfoImage></InfoImage>
        <imageFolder>-</imageFolder>
        <imageFolderFocus>thumbborder.png</imageFolderFocus>
        <frame>-</frame>
        <frameFocus>-</frameFocus>
        <showFrame>no</showFrame>
        <showFolder>yes</showFolder>
        <showBackGround>no</showBackGround>
        <showInfoImage>no</showInfoImage>
        <thumbAnimation effect="zoom" start="100,100" end="120,120" tween="quadratic" time="0">focus</thumbAnimation>
      </control>
        <control>
          <description>Thumbnail Panel</description>
          <type>thumbnailpanel</type>
          <id>50</id>
          <onleft>2</onleft>
          <onright>2</onright>
          <posX>30</posX>
          <posY>245</posY>
          <!--<unfocusedAlpha>200</unfocusedAlpha>-->
          <width>700</width>
          <height>420</height>
          <imageFolder>-</imageFolder>
          <imageFolderFocus>thumbborder.png</imageFolderFocus>
            <!-- smallicons -->
            <itemWidth>135</itemWidth>
            <itemHeight>200</itemHeight>
            <textureWidth>120</textureWidth>
            <textureHeight>170</textureHeight>
            <thumbWidth>106</thumbWidth>
            <thumbHeight>156</thumbHeight>
            <thumbPosX>7</thumbPosX>
            <thumbPosY>7</thumbPosY>
            <!-- largeicons -->
            <itemWidthBig>135</itemWidthBig>
            <itemHeightBig>200</itemHeightBig>
            <textureWidthBig>120</textureWidthBig>
            <textureHeightBig>170</textureHeightBig>
            <thumbWidthBig>106</thumbWidthBig>
            <thumbHeightBig>156</thumbHeightBig>
            <thumbPosXBig>7</thumbPosXBig>
            <thumbPosYBig>7</thumbPosYBig>
            <thumbZoom>yes</thumbZoom>
            <enableFocusZoom>no</enableFocusZoom>
        </control>
    </control>
    
