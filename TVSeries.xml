<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
    <id>9811</id>
    <defaultcontrol>50</defaultcontrol>
    <allowoverlay>no</allowoverlay>

	<!-- Shadows under blue/grey text -->
    <define>#shadow.dark:ff111111</define>
    <!-- Shadows under white text -->
    <define>#shadow.light:ff222222</define>
    
    <!-- Setup will replace the *.png with a '-' if user does not want Icons on Artwork -->
    <define>#overlaywubg:overlaywubg.png</define>
    <define>#tvseries_Watched:tvseries_Watched.png</define>
    <define>#tvseries_UnWatched:tvseries_UnWatched.png</define>
    <define>#tvseries_WatchedNA:tvseries_WatchedNA.png</define>
    <define>#tvseries_UnWatchedNA:tvseries_UnWatchedNA.png</define>

    <!-- Setup will update these defines for the textlist depending on options chosen during installation-->

    <!-- #posX:760 or #posX:730-->
    <define>#posX:760</define>
    <!-- #IconXOff:389 or #IconXOff:384-->
    <define>#IconXOff:389</define>
    <!-- #IconYOff:12 or #IconYOff:11-->
    <define>#IconYOff:12</define>
    <!-- #textXOff:-75 or #textXOff:-65-->
    <define>#textXOff:-75</define>
    <!-- #textXOff2:380 or #textXOff2:548-->
    <define>#textXOff2:380</define>
    <!-- #textXOff3:415 or #textXOff3:407-->
    <define>#textXOff3:415</define>
    <!-- #textureFocus:listbg_detail_fo.png or #textureFocus:listbg_detail2_fo.png-->
    <define>#textureFocus:listbg_detail_fo.png</define>

    <controls>

        <import>TVSeries.dummy.xml</import>        

		<!-- Backgrounds -->
        <control>
            <description>Default Background</description>
            <type>image</type>
            <id>0</id>
            <posX>0</posX>
            <posY>0</posY>
            <width>1280</width>
            <height>720</height>
            <texture>hover_my tv series.png</texture>
            <animation effect="fade" time="250" delay="0">WindowOpen</animation>
        </control>

        <control>
            <description>Fanart Background #1</description>
            <type>image</type>
            <id>524</id>
            <posX>0</posX>
            <posY>0</posY>
            <width>1280</width>
            <height>720</height>
            <texture>#TVSeries.Fanart.1</texture>
            <animation effect="fade" time="300">visible</animation>
            <animation effect="fade" time="300" delay="300">hidden</animation>
        </control>
        <control>
            <description>Fanart Background #2</description>
            <type>image</type>
            <id>525</id>
            <posX>0</posX>
            <posY>0</posY>
            <width>1280</width>
            <height>720</height>
            <texture>#TVSeries.Fanart.2</texture>
            <animation effect="fade" time="300">visible</animation>
            <animation effect="fade" time="300" delay="300">hidden</animation>
        </control>   		             
				
		<import>TVSeries.Facade.xml</import>
		<import>TVSeries.SeriesAndSeasonListPosters.xml</import>
		<import>TVSeries.SeriesAndSeasonFilmstrip.xml</import>
		<import>TVSeries.SeriesListBanners.xml</import>
		<import>TVSeries.SeriesWideBanners.xml</import>
		<import>TVSeries.EpisodeList.xml</import>
		<import>TVSeries.GroupList.xml</import>
		<import>TVSeries.HiddenMenu.xml</import>
		
		<import>common.time.xml</import>
		<import>common.overlays2.xml</import>
		<import>TVSeries.TopBar.xml</import>
		
		<!-- IMPORT PROCESS ANIMATION -->
        <control>
            <description>Import Animation</description>
            <type>animation</type>
            <id>51</id>
            <posX>860</posX>
            <posY>15</posY>
            <width>157</width>
            <height>24</height>
            <textures>common.waiting.1.png;common.waiting.2.png;common.waiting.3.png;common.waiting.4.png;common.waiting.5.png;common.waiting.6.png;common.waiting.7.png;common.waiting.8.png;common.waiting.7.png;common.waiting.6.png;common.waiting.5.png;common.waiting.4.png;common.waiting.3.png;common.waiting.2.png</textures>
            <Duration>0:0:03</Duration>
            <keepaspectratio>yes</keepaspectratio>
        </control>

    </controls>
</window>
