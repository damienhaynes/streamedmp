<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>2005</id>
  <defaultcontrol>13</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <controls>    
    <control>
      <description>dummy to fix images disappearing on more than 2x seeking (MP BUG)</description>
      <type>image</type>
      <id>0</id>
      <posX>2000</posX>
      <posY>2000</posY>
      <width>10</width>
      <height>10</height>
      <texture>-</texture>
      <visible>player.forwarding|player.rewinding</visible>
    </control>
    <control>
      <description>background (default)</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>523</posY>
      <width>1280</width>
      <height>197</height>
      <texture>osdbackground.png</texture>
      <visible>[player.paused|player.forwarding|player.rewinding]+!window.isosdvisible</visible>
    </control>
    <control>
      <description>background (small)</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>613</posY>
      <width>1280</width>
      <height>197</height>
      <texture>osdbackground.png</texture>
      <visible>control.isvisible(10)|control.isvisible(11)|control.isvisible(12)</visible>
    </control>

    <control>
      <type>image</type>
      <id>502</id>
      <posX>1100</posX>
      <posY>12</posY>
      <width>81</width>
      <height>30</height>
      <texture>video.action.forbidden.png</texture>
      <colordiffuse>White</colordiffuse>
      <visible>no</visible>
    </control>
    
    <control>
      <description>DVD Cover</description>
      <type>image</type>
      <id>0</id>
      <texture>#Play.Current.Thumb</texture>
      <posX>16</posX>
      <posY>554</posY>
      <width>160</width>
      <height>160</height>
      <align>left</align>
      <centered>yes</centered>
      <keepaspectratio>yes</keepaspectratio>
      <visible>player.paused|player.rewinding|player.forwarding</visible>
    </control>
    <control>
      <description>Movie Name</description>
      <id>0</id>
      <type>fadelabel</type>
      <width>700</width>
      <posX>195</posX>
      <posY>585</posY>
      <font>mediastream11tc</font>
      <label>#Play.Current.Title</label>
      <textcolor>ffFFFFFF</textcolor>
      <visible>player.rewinding|player.forwarding</visible>
    </control>
    <control>
      <description>Movie Name</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>195</posX>
      <posY>585</posY>
      <width>480</width>
      <font>mediastream11tc</font>
      <label>#Play.Current.Title </label>
      <textcolor>ffFFFFFF</textcolor>
      <visible>player.paused</visible>
    </control>
    <control>
      <description>Movie Year</description>
      <id>0</id>
      <type>fadelabel</type>
      <width>700</width>
      <posX>195</posX>
      <posY>608</posY>
      <font>mediastream11tc</font>
      <label>#Play.Current.Year </label>
      <textcolor>ff909090</textcolor>
      <visible>player.paused|player.rewinding|player.forwarding</visible>
    </control>
    <control>
      <description>Plot</description>
      <type>textboxscrollup</type>
      <id>0</id>
      <posX>690</posX>
      <posY>557</posY>
      <width>550</width>
      <height>96</height>
      <seperator>------------------------------------</seperator>
      <label>#Play.Current.Plot</label>
      <font>mediastream11</font>
      <visible>player.paused+!window.isosdvisible</visible>
    </control>
    <import>common.player.xml</import>   
    <import>common.play.fullscreen.xml</import>
    <import>common.progressbar.xml</import>
  </controls>
</window>