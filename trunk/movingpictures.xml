<?xml version="1.0" encoding="utf-8"?>
<!-- 
This file should contain the facade view and all gui
elements that should remain on screen during all or
multiple view modes. 
-->
<window>
  <id>96742</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  
  <!-- 
  This set of defines are read by the plug-in and used to determine aspects of it's behavior. These
  are parameters to give the skinner a tiny bit more control over the presentation.
  -->
  <define>#largeicons.available:true</define>      	<!-- true if this skin implements the largeicons view -->
  <define>#largeicons.backdrop.used:true</define> 	<!-- true if backdrop (fanart) should be displayed in this view -->
  
  <define>#smallicons.available:true</define>      	<!-- Set to true if this skin implements the smallicons view -->
  <define>#smallicons.backdrop.used:true</define> 	<!-- true if backdrop (fanart) should be displayed in this view -->
  
  <define>#list.available:true</define>            	<!-- Set to true if this skin implements the list view -->
  <define>#list.backdrop.used:true</define>        	<!-- true if backdrop (fanart) should be displayed in this view -->
  
  <define>#filmstrip.available:true</define>       	<!-- Set to true if this skin implements the filmstrip view -->
  <define>#filmstrip.backdrop.used:true</define>   	<!-- true if backdrop (fanart) should be displayed in this view -->
  
  <define>#details.backdrop.used:true</define>   	<!-- true if backdrop (fanart) should be displayed in this view -->
  <define>#categories.backdrop.used:true</define>   <!-- true if backdrop (fanart) should be displayed in this view -->
  
  <controls>
    
    <!--            :: DUMMY CONTROLS ::             -->
    
    <control>
      <description>Visibile when filtering by watched flag. Only unwatched movies are listed.</description>
      <type>label</type>
      <id>8</id>
      <posX>-50</posX>
      <posY>-50</posY>
      <width>0</width>
    </control>

    <control>
      <description>Visibile when the currently selected movie has been watched</description>
      <type>label</type>
      <id>9</id>
      <posX>-50</posX>
      <posY>-50</posY>
      <width>0</width>
    </control>

    <control>
      <description>Visibile when filtering by remote control searching</description>
      <type>label</type>
      <id>10</id>
      <posX>-50</posX>
      <posY>-50</posY>
      <width>0</width>
    </control>
	
	<control>
      <description>Visibile when Parental Controls are enabled</description>
      <type>image</type>
      <id>16</id>
      <posX>-50</posX>
      <posY>-50</posY>
      <width>0</width>
    </control>
	
	<control>
      <description>Visibile when Filtering is enabled</description>
      <type>image</type>
      <id>17</id>
      <posX>-50</posX>
      <posY>-50</posY>
      <width>0</width>
    </control>
	
	<!-- Some properties are still unitialised when intially loading a large collection -->
	<control>
      <description>Visibile when MovingPictures Initalising</description>
      <type>label</type>
      <id>9001</id>
      <posX>-50</posX>
      <posY>-50</posY>
      <width>0</width>
	  <visible>string.starts(#MovingPictures.CurrentNode.name,#MovingPictures.)</visible>
    </control>
	
    <!--            :: BACKGROUNDS :: MOVIE BACKDROP :: OVERLAYS ::            -->
    
    <control>
      <description>Default Background</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>720</height>
      <texture>hover_moving pictures.png</texture>
    </control>
   
   <!-- Fading Fanart Controls -->
   <control>
      <description>Movie Backdrop (Fan Art)</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>720</height>
      <texture>#MovingPictures.Backdrop</texture>      
	  <animation effect="fade" time="300">visible</animation>
      <animation effect="fade" time="300" delay="300">hidden</animation>
    </control>
    <control>
      <description>Alternate Movie Backdrop</description>
      <type>image</type>
      <id>11</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>720</height>
      <texture>#MovingPictures.Backdrop2</texture>
      <animation effect="fade" time="300">visible</animation>
      <animation effect="fade" time="300" delay="300">hidden</animation>
    </control>
    
    <control>
      <description>Backdrop Overlay</description>
      <type>image</type>
      <id>0</id>
      <posX>-2</posX>
      <posY>0</posY>
      <width>1284</width>
      <height>722</height>
      <texture>mainoverlay.png</texture>
      <visible>!facadeview.filmstrip+[Control.IsVisible(50)|Control.IsVisible(51)]</visible>
    </control>    
	
    <control>
      <description>Filmstrip Black Background</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>504</posY>
      <width>1280</width>
      <height>221</height>
      <colordiffuse>ffFFFFFF</colordiffuse>
      <texture>black.png</texture>
      <visible>facadeview.filmstrip+Control.IsVisible(50)</visible>
    </control>
    
    <control>
      <description>Backdrop Overlay - FilmStrip</description>
      <type>image</type>
      <id>0</id>
      <posX>-2</posX>
      <posY>-2</posY>
      <width>1284</width>
      <height>726</height>
      <texture>movieviewbg.png</texture>
      <visible>facadeview.filmstrip+Control.IsVisible(50)</visible>
    </control>
    
    <control>
      <description>Glasstitlebar - FilmStrip</description>
      <type>image</type>
      <id>0</id>
      <posX>280</posX>
      <posY>64</posY>
      <width>512</width>
      <height>43</height>
      <texture>glasstitlebar.png</texture>
      <visible>facadeview.filmstrip+Control.IsVisible(50)</visible>
    </control>
       
    <import>movingpictures.hiddenmenu.xml</import>
        
    <import>movingpictures.listview.xml</import>
	<import>movingpictures.listview.mediainfo.xml</import>
    
	<import>movingpictures.thumbsview.xml</import>
	<import>movingpictures.thumbsview.mediainfo.xml</import>
    
	<import>movingpictures.filmstripview.xml</import>
	<import>movingpictures.filmstripview.mediainfo.xml</import>
    
	<import>movingpictures.details.xml</import>
	<import>movingpictures.details.mediainfo.xml</import>
 	   
    <import>movingpictures.facade.xml</import>	
    <import>common.overlays2.xml</import>
    
	<control>
		<description>Top Title Extension Background</description>
		<type>image</type>
		<id>0</id>
		<posX>381</posX>
		<posY>11</posY>
		<width>486</width>
		<height>35</height>
		<texture>tvtitlebg.png</texture>		
		<animation effect="fade" time="150" delay="0">WindowClose</animation>		
		<animation effect="slide" start="-514,0" end="0,0" tween="quadratic" time="150" delay="150">Visible</animation>		
		<!--<animation effect="slide" start="0,0" end="-514,0" tween="quadratic" time="150" delay="0">Hidden</animation>-->
		<visible>[Control.IsVisible(50)|Control.IsVisible(51)]+Control.IsVisible(17)+!Control.IsVisible(9001)</visible>
	</control>
	<control>
		<description>Current Filter</description>
		<type>fadelabel</type>
		<id>0</id>
		<posX>839</posX>
		<posY>13</posY>
		<width>320</width>
		<align>right</align>
		<label>#MovingPictures.Filter.Combined</label>
		<font>mediastream12c</font>
		<align>right</align>
		<wrapString> |  </wrapString>
		<animation effect="fade" time="150" delay="0">WindowClose</animation>		
		<!--<animation effect="slide" start="-160,0" end="0,0" tween="bounce" time="350" delay="200">Visible</animation>-->
		<animation effect="slide" start="-160,0" end="0,0" tween="quadratic" time="150" delay="150">Visible</animation>	
		<visible>[Control.IsVisible(50)|Control.IsVisible(51)]+Control.IsVisible(17)+!Control.IsVisible(9001)</visible>
	</control>
			  
    <control>
		<description>Top Title Background</description>
		<type>image</type>
		<id>0</id>
		<posX>77</posX>
		<posY>11</posY>
		<width>437</width>
		<height>35</height>
		<texture>tvtitlebg.png</texture>		
		<animation effect="slide" start="-514,0" end="0,0" tween="quadratic" time="150" delay="0">Visible</animation>		
		<animation effect="fade" time="150" delay="0">WindowClose</animation>
		<visible>[Control.IsVisible(50)|Control.IsVisible(51)]+!Control.IsVisible(9001)</visible>
    </control>    
    <control>
		<description>Plugin Name / Current Category</description>
		<type>fadelabel</type>      
		<id>0</id>
		<posX>493</posX>
		<posY>13</posY>
		<width>350</width>
		<font>mediastream12c</font>
		<align>right</align>
		<visible>yes</visible>
		<label>#MovingPictures.CurrentNode.name</label>		
		<wrapString> |  </wrapString>
		<animation effect="slide" start="-514,0" end="0,0" tween="quadratic" time="150" delay="0">Visible</animation>
		<animation effect="fade" time="150" delay="0">WindowClose</animation>		
		<visible>[Control.IsVisible(50)|Control.IsVisible(51)]+!Control.IsVisible(9001)</visible>	  
    </control>
	     
    <control>
		<description>Working Animation</description>
		<type>animation</type>
		<id>13</id>
		<posX>890</posX>
		<posY>15</posY>
		<width>157</width>
		<height>24</height>
		<textures>common.waiting.1.png;common.waiting.2.png;common.waiting.3.png;common.waiting.4.png;common.waiting.5.png;common.waiting.6.png;common.waiting.7.png;common.waiting.8.png;common.waiting.7.png;common.waiting.6.png;common.waiting.5.png;common.waiting.4.png;common.waiting.3.png;common.waiting.2.png</textures>
		<Duration>0:0:03</Duration>
		<keepaspectratio>yes</keepaspectratio>		
    </control>	
		
    <import>common.time.xml</import>
    
  </controls>
</window>
