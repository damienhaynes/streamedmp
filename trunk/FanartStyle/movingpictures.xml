<?xml version="1.0" encoding="utf-8"?>
<!-- 
This file should contain the facade view and all gui
elements that should remain on screen during all or
multiple view modes. 
-->
<window>
  <id>96742</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  
  <!-- 
  This set of defines are read by the plug-in and used to determine aspects of it's behavior. These
  are parameters to give the skinner a tiny bit more control over the presentation.
  -->
  <!-- true if this skin implements the largeicons view -->
  <define>#largeicons.available:true</define>
  <!-- true if backdrop (fanart) should be displayed in this view -->
  <define>#largeicons.backdrop.used:true</define>
  <!-- Set to true if this skin implements the smallicons view -->
  <define>#smallicons.available:true</define>
  <!-- true if backdrop (fanart) should be displayed in this view -->
  <define>#smallicons.backdrop.used:true</define>
  <!-- Set to true if this skin implements the list view -->
  <define>#list.available:true</define>
  <!-- true if backdrop (fanart) should be displayed in this view -->
  <define>#list.backdrop.used:true</define>
  <!-- Set to true if this skin implements the filmstrip view -->
  <define>#filmstrip.available:true</define>
  <!-- true if backdrop (fanart) should be displayed in this view -->
  <define>#filmstrip.backdrop.used:true</define>
  <!-- true if backdrop (fanart) should be displayed in this view -->
  <define>#categories.backdrop.used:true</define>
  
  <define>#smalltitle.color:FF909090</define>
  
  <!-- Setup will replace the *.png with a '-' if user does not want them -->
  <define>#movingpictures_RoundedPosters:round.poster.frame.png</define>
  
  <!-- Shadows under blue/grey text -->
  <define>#shadow.dark:ff111111</define>
  <!-- Shadows under white text -->
  <define>#shadow.light:ff222222</define>
	
  <controls>
  
	<!--            :: DUMMY CONTROLS ::            -->
    <control>
      <description>Visibile when filtering by watched flag. Only unwatched movies are listed.</description>
      <type>label</type>
      <id>8</id>
      <posX>-50</posX>
      <posY>-50</posY>
      <width>0</width>
    </control>
    <control>
      <description>Visibile when the currently selected movie has been watched</description>
      <type>label</type>
      <id>9</id>
      <posX>-50</posX>
      <posY>-50</posY>
      <width>0</width>
    </control>
    <control>
      <description>Visibile when filtering by remote control searching.</description>
      <type>label</type>
      <id>10</id>
      <posX>-50</posX>
      <posY>-50</posY>
      <width>0</width>
    </control>  
	<control>
      <description>Visibile when parental controls are enabled.</description>
      <type>image</type>
      <id>16</id>
      <posX>-50</posX>
      <posY>-50</posY>
      <width>0</width>
    </control>
	<control>
      <description>Visibile when Filtering is enabled</description>
      <type>image</type>
      <id>17</id>
      <posX>-50</posX>
      <posY>-50</posY>
      <width>0</width>
    </control>
	
	<!-- Some properties are still unitialised when intially loading a large collection -->
	<control>
      <description>Visibile when MovingPictures Initalising</description>
      <type>label</type>
      <id>9001</id>
      <posX>-50</posX>
      <posY>-50</posY>
      <width>0</width>
	  <visible>string.starts(#MovingPictures.CurrentNode.name,#MovingPictures.)</visible>
    </control>
	
	<!--            :: BACKDROPS ::            -->
	<control>
      <description>Background to be displayed when there is no Movie Backdrop</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>720</height>
      <texture>hover_moving pictures.png</texture>
    </control>
	
    <control>
      <description>Movie Backdrop (Fan Art) - Plug-in sets to invisible, if no art.</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>720</height>
      <texture>#MovingPictures.Backdrop</texture>
      <animation effect="fade" start="0" end="100" time="3000">WindowOpen</animation>
      <animation effect="fade" start="0" end="100" time="200">Visible</animation>
      <animation effect="fade" start="100" end="0" time="200" delay="200">Hidden</animation>
      <!-- Do not modify the visibility for this component. It is handled by the plug-in. Use the above
           defines for conditional visibility if you dont want to use fan-art only specific views. -->
    </control>
    <control>
      <description>Alternate Movie Backdrop - Toggles Load with Component 1 for animations on visibiltiy</description>
      <type>image</type>
      <id>11</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>720</height>
      <texture>#MovingPictures.Backdrop2</texture>
      <animation effect="fade" start="0" end="100" time="350">Visible</animation>
      <animation effect="fade" start="100" end="0" time="200" delay="200">Hidden</animation>
      <!-- Do not modify the visibility for this component. It is handled by the plug-in. Use the above
           defines for conditional visibility if you dont want to use fan-art only specific views. -->
    </control>

	<!--            :: BACKGROUND OVERLAYS ::           -->
	<import>movingpictures.background.overlays.xml</import>
	
	<!--            :: HIDDEN MENU ::            -->
    <import>movingpictures.hiddenmenu.xml</import>
   
    <!-- Movie Counts -->
	<control>
		<description>Movie Count Background</description>
		<type>image</type>
		<id>0</id>
		<posX>1113</posX>
		<posY>10</posY>
		<width>159</width>
		<height>28</height>
		<texture>mediacountbackground.png</texture>
		<visible>!control.isvisible(51)+control.isvisible(50)</visible>
	</control>    
	<control>
		<description>Movie Count Label</description>
		<type>label</type>
		<label>#MovingPictures.Translation.Movies.Label:</label>
		<id>0</id>
		<posX>1123</posX>
		<posY>14</posY>
		<font>mediastream10tc</font>
		<textcolor>ff909090</textcolor>
		<visible>!control.isvisible(51)+control.isvisible(50)</visible>
	</control>
	<control>
		<type>label</type>
		<id>0</id>
		<posX>1246</posX>
		<posY>12</posY>
		<width>350</width>
		<font>mediastream11c</font>
		<textcolor>ff006698</textcolor>
		<align>right</align>
		<label>#MovingPictures.general.filteredmoviecount</label>
		<visible>!control.isvisible(51)+control.isvisible(50)</visible>
	</control>
	
	<!-- Imported Facades Views -->	
	<import>movingpictures.details.xml</import>
	<import>movingpictures.details.mediainfo.xml</import>
	
	<import>movingpictures.listview.xml</import>
	<import>movingpictures.listview.mediainfo.xml</import>
	
	<import>movingpictures.thumbsview.xml</import>
	<import>movingpictures.thumbsview.mediainfo.xml</import>
	
	<import>movingpictures.facade.xml</import>
	
	<!-- MediaInfo for filmstrp is shared in listview -->	
	<import>movingpictures.filmstripview.xml</import>	
	
    <!--Top Bar Controls -->
	<control>
		<description>Top Title Extension Background</description>
		<type>image</type>
		<id>0</id>
		<posX>281</posX>
		<posY>11</posY>
		<width>390</width>
		<height>35</height>
		<texture>tvtitlebg.png</texture>		
		<animation effect="fade" time="150" delay="0">WindowClose</animation>		
		<animation effect="slide" start="-314,0" end="0,0" tween="quadratic" time="150" delay="150">Visible</animation>		
		<visible>[control.isvisible(50)|control.isvisible(51)]+control.isvisible(17)+!control.isvisible(9001)</visible>
	</control>
	<control>
		<description>Current Filter</description>
		<type>label</type>
		<id>0</id>
		<posX>655</posX>
		<posY>13</posY>
		<width>240</width>
		<align>right</align>
		<label>#MovingPictures.Filter.Combined</label>
		<font>mediastream12c</font>
		<align>right</align>
		<wrapString> |  </wrapString>
		<animation effect="fade" time="150" delay="0">WindowClose</animation>		
		<animation effect="slide" start="-40,0" end="0,0" tween="quadratic" time="150" delay="150">Visible</animation>	
		<visible>[control.isvisible(50)|control.isvisible(51)]+control.isvisible(17)+!control.isvisible(9001)</visible>
	</control>
	
    <control>
		<description>Top Title Background</description>
		<type>image</type>
		<id>0</id>
		<posX>77</posX>
		<posY>11</posY>
		<width>335</width>
		<height>35</height>
		<texture>tvtitlebg.png</texture>		
		<animation effect="slide" start="-314,0" end="0,0" tween="quadratic" time="150" delay="0">Visible</animation>		
		<animation effect="fade" time="150" delay="0">WindowClose</animation>
		<visible>[control.isvisible(50)|control.isvisible(51)]+!control.isvisible(9001)</visible>
    </control>    
    <control>
		<description>Plugin Name / Current Category</description>
		<type>label</type>      
		<id>0</id>
		<posX>398</posX>
		<posY>13</posY>
		<width>260</width>
		<font>mediastream12c</font>
		<align>right</align>
		<visible>yes</visible>
		<label>#MovingPictures.CurrentNode.name</label>		
		<wrapString> |  </wrapString>
		<animation effect="slide" start="-150,0" end="0,0" tween="quadratic" time="150" delay="0">Visible</animation>
		<animation effect="fade" time="150" delay="0">WindowClose</animation>		
		<visible>[control.isvisible(50)|control.isvisible(51)]+!control.isvisible(9001)</visible>	  
    </control>
        
	<control>
      <description>Working Animation</description>
      <type>animation</type>
      <id>13</id>
      <posX>561</posX>
      <posY>250</posY>
      <width>157</width>
      <height>24</height>
      <textures>common.waiting.1.png;common.waiting.2.png;common.waiting.3.png;common.waiting.4.png;common.waiting.5.png;common.waiting.6.png;common.waiting.7.png;common.waiting.8.png;common.waiting.7.png;common.waiting.6.png;common.waiting.5.png;common.waiting.4.png;common.waiting.3.png;common.waiting.2.png</textures>
      <Duration>0:0:03</Duration>
      <keepaspectratio>yes</keepaspectratio>
    </control>    
	
    <import>common.time.xml</import>
    <import>common.overlays.xml</import>
	
	<!-- Parental Controls Indicator -->
	<control>
		<description>Parental Controls Lock Indicator</description>
		<type>image</type>
		<id>0</id>
		<posX>1075</posX>
		<posY>8</posY>
		<width>36</width>
		<height>36</height>
		<texture>parentallock.png</texture>
		<visible>control.isvisible(16)+!control.isvisible(51)+control.isvisible(50)</visible>
		<animation effect="fade" time="250">WindowOpen</animation>
		<animation effect="fade" time="250">WindowClose</animation>
	</control>		
	<control>
		<description>Parental Controls Lock Indicator</description>
		<type>image</type>
		<id>0</id>
		<posX>1240</posX>
		<posY>8</posY>
		<width>36</width>
		<height>36</height>
		<texture>parentallock.png</texture>
		<visible>control.isvisible(16)+control.isvisible(51)+!control.isvisible(50)</visible>
		<animation effect="fade" time="250">WindowOpen</animation>
		<animation effect="fade" time="250">WindowClose</animation>		
	</control>
	
	<control>
		<description>Default Category Image</description>
		<type>image</type>
		<id>0</id>
		<posX>150</posX>
		<posY>330</posY>
		<width>341</width>
		<height>341</height>
		<texture flipY="true" diffuse="Thumb_Mask.png">Categories\Movies.png</texture>
		<keepaspectratio>yes</keepaspectratio>
		<animation effect="fade" time="250">WindowOpen</animation>
		<animation effect="fade" time="250">WindowClose</animation>			
		<visible>control.isvisible(51)+!control.isvisible(50)+!Control.HasThumb(100)</visible>
	</control>
	<control>
		<description>Category Image</description>
		<type>image</type>
		<id>100</id>
		<posX>150</posX>
		<posY>330</posY>
		<width>341</width>
		<height>341</height>
		<texture flipY="true" diffuse="Thumb_Mask.png">Categories\#MovingPictures.SelectedNode.FileFriendlyName.png</texture>	
		<keepaspectratio>yes</keepaspectratio>
		<animation effect="fade" time="250">WindowOpen</animation>
		<animation effect="fade" time="250">WindowClose</animation>			
		<visible>control.isvisible(51)</visible>
	</control>
	
	<control>
		<description>Playback Indicator</description>
		<type>image</type>
		<id>18</id>
		<posX>0</posX>
		<posY>0</posY>
		<width>1280</width>
		<height>720</height>
		<texture>black.png</texture>
		<colordiffuse>50fefaff</colordiffuse>
    </control>
	
  </controls>
</window>
