<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>874004</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#Fanart.1:#Trakt.SearchMovies.Fanart.1</define>
  <define>#Fanart.2:#Trakt.SearchMovies.Fanart.2</define>
  <controls>
    <control>
      <description>BG</description>
      <type>image</type>
      <id>1</id>
      <texture>BH Videos.jpg</texture>
      <width>1280</width>
      <height>720</height>
      <colordiffuse>90ffffff</colordiffuse>
    </control>
    <import>Trakt.Common.Fanart.xml</import>
    <import>common.window.xml</import>
    <import>common.time.xml</import>
    <control>
      <description>General Overlay</description>
      <id>0</id>
      <type>image</type>
      <posX>0</posX>
      <posY>30</posY>
      <width>1280</width>
      <height>720</height>
      <texture>general_overlay.png</texture>
    </control>
    <control>
      <description>Current View</description>
      <type>label</type>
      <id>0</id>
      <posX>29</posX>
      <posY>10</posY>
      <width>866</width>
      <font>font11</font>
      <textcolor>ff6FAFE1</textcolor>
      <label>#Trakt.Translation.SearchMovies.Label | #Trakt.Search.SearchTerm</label>
      <align>left</align>
    </control>
    <import>Trakt.Common.Facade.xml</import>
    <!-- Hidden Menu -->
    <control>
      <type>actiongroup</type>
      <description>action menu</description>
      <defaultcontrol>2</defaultcontrol>
      <onexit>50</onexit>
      <buttonX>0</buttonX>
      <buttonY>-60</buttonY>
      <buttonwidth>105</buttonwidth>
      <buttonheight>720</buttonheight>
      <textureFocus>-</textureFocus>
      <textureNoFocus>Action_nofocus.png</textureNoFocus>
      <width>274</width>
      <height>900</height>
      <dimColor>00ffffff</dimColor>
      <control>
        <type>image</type>
        <id>0</id>
        <width>1280</width>
        <height>720</height>
        <texture>white.png</texture>
        <colordiffuse>201e90ff</colordiffuse>
      </control>
      <control>
        <type>image</type>
        <posX>25</posX>
        <posY>78</posY>
        <width>373</width>
        <height>591</height>
        <texture>Backslide.png</texture>
        <colorDiffuse>ffffffff</colorDiffuse>
        <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="70" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="70" end="-300,0" reversible="false">hidden</animation>
      </control>
      <control>
        <description>group element</description>
        <type>group</type>
        <animation effect="slide" time="70" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="70" end="-300,0" reversible="false">hidden</animation>
        <visible>!Control.HasFocus(50)</visible>
        <posX>49</posX>
        <posY>121</posY>
        <layout>StackLayout</layout>
        <visible>!Control.HasFocus(50)</visible>
        <control>
          <description>button group</description>
          <type>group</type>
          <posX>60</posX>
          <posY>121</posY>
          <width>293</width>
          <layout>StackLayout</layout>
          <visible>!Control.HasFocus(50)</visible>
          <animation effect="slide" time="70" start="-300,0" reversible="false">visible</animation>
          <animation effect="slide" time="70" end="-300,0" reversible="false">hidden</animation>
          <control>
            <description>Change Layout</description>
            <type>button</type>
            <id>2</id>
            <width>293</width>
            <label>Change Layout</label>
            <onleft>50</onleft>
            <onright>50</onright>
            <onup>21</onup>
          </control>
        </control>
      </control>
    </control>

    <control>
      <description>Overlay text right</description>
      <id>0</id>
      <type>image</type>
      <posX>709</posX>
      <posY>156</posY>
      <width>549</width>
      <height>466</height>
      <texture mask="picturethumbmask.png">black.png</texture>
      <colordiffuse>60ffffff</colordiffuse>
      <visible>facadeview.list</visible>
    </control>
    <control>
      <description>Movie Poster</description>
      <id>500</id>
      <type>image</type>
      <posX>1010</posX>
      <posY>170</posY>
      <width>225</width>
      <height>338</height>
      <keepaspectratio>no</keepaspectratio>
      <zoom>no</zoom>
      <texture mask="videothumbmask.png">#selectedthumb</texture>
      <visible>facadeview.list</visible>
    </control>
    <control>
      <description>Movie Poster Frame</description>
      <type>image</type>
      <id>1</id>
      <posX>1010</posX>
      <posY>170</posY>
      <width>225</width>
      <height>338</height>
      <texture>Videothumbframe.png</texture>
      <visible>facadeview.list</visible>
    </control>
    <control>
      <description>Separator Line</description>
      <type>image</type>
      <id>1</id>
      <posX>729</posX>
      <posY>170</posY>
      <width>260</width>
      <height>1</height>
      <texture>hbar1white.png</texture>
      <colordiffuse>60ffffff</colordiffuse>
      <visible>facadeview.list+!string.equals(#Trakt.Movie.Title,)</visible>
    </control>
    <control Style="NoShadow">
      <description>Plot value</description>
      <type>textboxscrollup</type>
      <id>1</id>
      <posX>729</posX>
      <posY>190</posY>
      <width>260</width>
      <height>300</height>
      <label>#Trakt.Movie.Overview</label>
      <font>font11</font>
      <textcolor>ivory</textcolor>
      <visible>facadeview.list</visible>
    </control>
    <control>
      <description>Separator Line</description>
      <type>image</type>
      <id>1</id>
      <posX>729</posX>
      <posY>505</posY>
      <width>260</width>
      <height>1</height>
      <texture>hbar1white.png</texture>
      <colordiffuse>60ffffff</colordiffuse>
      <visible>facadeview.list+!string.equals(#Trakt.Movie.Title,)</visible>
    </control>
    
  </controls>
</window>