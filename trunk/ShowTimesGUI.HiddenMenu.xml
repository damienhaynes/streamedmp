          <description>Empty button</description>
          <type>button</type>
          <id>0</id>
          <onleft>50</onleft>
          <label>-</label>
          <visible>true</visible>
        </control>
        <control>
          <description>Empty button</description>
          <type>button</type>
          <id>0</id>
          <onleft>50</onleft>
          <label>-</label>
          <visible>true</visible>
        </control>
        <control>
          <type>label</type>
          <description>Next Refresh</description>
          <id>0</id>
          <width>220</width>
          <onleft>50</onleft>
          <font>mediastream10</font>
          <label>#showtimes_nextupdate</label>
        </control>
      </control>
