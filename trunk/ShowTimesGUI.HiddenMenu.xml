        <description>group element</description>
        <posX>1040</posX>
        <posY>245</posY>
        <width>220</width>
        <height>720</height>
        <onexit>50</onexit>
        <layout>StackLayout(0, Vertical, true)</layout>
        <animation effect="slide" time="100" start="300,0">visible</animation>
        <animation effect="slide" time="0" end="300,0">hidden</animation>
        <visible>!control.hasfocus(50)+control.isvisible(50)+!control.isvisible(24)</visible>
        <control>
          <type>button</type>
          <description>Change View</description>
          <id>2</id>
          <label>417</label>
          <onup>17</onup>
          <ondown>3</ondown>
          <onleft>50</onleft>
        </control>
        <control>
          <type>button</type>
          <description>Show Theaters</description>
          <id>3</id>
          <label>-</label>
          <onup>2</onup>
          <ondown>4</ondown>
          <onleft>50</onleft>
        </control>
        <control>
          <type>button</type>
          <description>Extra</description>
          <id>4</id>
          <label>-</label>
          <onup>3</onup>
          <ondown>66602</ondown>
          <onleft>50</onleft>
        </control>
        <control>
          <description>Empty button</description>
          <type>button</type>
