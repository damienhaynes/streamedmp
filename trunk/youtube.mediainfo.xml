<?xml version="1.0" encoding="utf-8"?>
<window>	
	<controls>
    <control>
      <description>UnWatched BG Logo</description>
      <type>image</type>
      <id>0</id>
      <posX>130</posX>
      <posY>642</posY>
      <width>25</width>
      <height>25</height>                                              
      <texture>youtube.fm_unwatched.png</texture>	  
