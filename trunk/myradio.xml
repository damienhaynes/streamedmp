<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>30</id>
  <defaultcontrol>2</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#header.label:666</define>
  <define>#header.hover:hover_my radio.png</define>
  <controls>
    
    <control>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>720</height>
      <texture>#header.hover</texture>
      <animation effect="fade" time="200" delay="200">windowopen</animation>
    </control>
    
    <control>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>720</height>
      <texture>mainoverlay.png</texture>
      <animation effect="fade" time="200" delay="200">windowopen</animation>
    </control>
    
    <control>
      <id>204</id>
      <type>image</type>
      <posX>45</posX>
      <posY>285</posY>
      <width>199</width>
      <height>199</height>
      <texture>#selectedthumb</texture>
      <visible>facadeview.list</visible>
    </control>
    
    <control>
      <type>actiongroup</type>
      <description>action menu</description>
      <defaultcontrol>7</defaultcontrol>
      <onexit>50</onexit>
      <control>
              <type>image</type>
              <posX>0</posX>
              <posY>0</posY>
              <width>256</width>
              <height>720</height>
              <texture>hiddenmenu_left.png</texture>
              <visible>!Control.HasFocus(50)</visible>
              <animation effect="slide" time="100" start="-356,0">visible</animation>
              <animation effect="slide" time="100" end="-356,0">hidden</animation>
      </control>
      <control>
              <id>0</id>
              <label>SWITCH</label>
              <type>label</type>
              <font>mediastream12tc</font>
              <posX>15</posX>
              <posY>226</posY>
              <visible>!Control.HasFocus(50)</visible>
              <animation effect="slide" time="100" start="-356,0">visible</animation>
              <animation effect="slide" time="100" end="-356,0">hidden</animation>
      </control>
      <control>
              <id>0</id>
              <label>SETTINGS</label>
              <type>label</type>
              <font>mediastream12tc</font>
              <posX>15</posX>
              <posY>418</posY>
              <visible>!Control.HasFocus(50)</visible>
              <animation effect="slide" time="100" start="-356,0">visible</animation>
              <animation effect="slide" time="100" end="-356,0">hidden</animation>
      </control>
      <control>
        <type>group</type>
        <description>group element</description>
        <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="100" start="-356,0">visible</animation>
        <animation effect="slide" time="100" end="-356,0">hidden</animation>
        <posX>0</posX>
        <posY>250</posY>
        <width>256</width>
        <height>720</height>
        <layout>StackLayout</layout>
        
        <control>
          <description>View-As button</description>
          <type>button</type>
          <id>2</id>
          <label>100</label>
          <onright>50</onright>
        </control>
        
        <control>
          <type>sortbutton</type>
          <onright>50</onright>
        </control>
        
        <control>
          <description>Previous button</description>
          <type>button</type>
          <id>6</id>
          <label>210</label>
          <onright>50</onright>
          <action>15</action>
        </control>
        
        <control>
          <description>Next</description>
          <type>button</type>
          <id>7</id>
          <label>209</label>
          <onright>50</onright>
          <action>14</action>
        </control>
        
        <control>
          <description>Radio Guide</description>
          <type>button</type>
          <id>8</id>
          <label>533</label>
          <onright>50</onright>
          <hyperlink>762</hyperlink>
        </control>
        
        <control>
          <description>Empty button</description>
          <type>button</type>
          <id>0</id>
          <label>-</label>
          <visible>false</visible>
        </control>
	
        <control>
          <description>music settings button</description>
          <type>button</type>
          <id>12</id>
          <label>Music Settings</label>
          <onright>50</onright>
          <hyperlink>14</hyperlink>
        </control>
        
      </control>
    </control>
    
    <import>common.facade.music.xml</import>
    
    <import>common.window.xml</import>
    <import>common.time.xml</import>
    
  </controls>
</window>