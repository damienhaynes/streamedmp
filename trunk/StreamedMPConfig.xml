<window>
  <id>1962</id>
  <defaultcontrol>2</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <define>#header.label:Skin Settings</define>
  <define>#header.hover:hover_settings.png</define>
  <define>#defaultcontrol:2</define>
  <define>#defaultcontrol.onright:9999</define>
  <controls>

    <import>common.settings.xml</import>
    <import>common.time.xml</import>

    <control Style="settingsmaintexturefo">
      <type>image</type>
      <posY>150</posY>
      <visible>control.hasfocus(2)</visible>
    </control>
    <control Style="settingsmaintexturenf">
      <type>image</type>
      <posY>150</posY>
      <visible>!control.hasfocus(2)</visible>
    </control>

    <control Style="settingsmaintexturefo">
      <type>image</type>
      <posY>192</posY>
      <visible>control.hasfocus(3)</visible>
    </control>
    <control Style="settingsmaintexturenf">
      <type>image</type>
      <posY>192</posY>
      <visible>!control.hasfocus(3)</visible>
    </control>

    <control Style="settingsmaintexturefo">
      <type>image</type>
      <posY>234</posY>
      <visible>control.hasfocus(4)</visible>
    </control>
    <control Style="settingsmaintexturenf">
      <type>image</type>
      <posY>234</posY>
      <visible>!control.hasfocus(4)</visible>
    </control>

    
    <control>
      <type>group</type>
      <description>group element</description>
      <animation effect="fade" time="200" delay="200">windowopen</animation>
      <posX>251</posX>
      <posY>159</posY>
      <width>595</width>
      <height>500</height>
      <layout>StackLayout</layout>
      
      <control Style="settingsmaincheckmark">
        <description>Shuffle Playlist on load</description>
        <type>checkmark</type>
        <id>2</id>
        <label>Show CD Cover Only in Music Now Playing</label>
        <onleft>2</onleft>
        <onright>#defaultcontrol.onright</onright>
        <onup>17</onup>
        <ondown>3</ondown>
      </control>

      <control Style="settingsmaincheckmark">
        <description>Enable ID3  other tagformats</description>
        <type>checkmark</type>
        <id>3</id>
        <label>Show Graphic EQ in Music Now Playing</label>
        <onleft>3</onleft>
        <onright>#defaultcontrol.onright</onright>
        <onup>2</onup>
      </control>

      <control Style="settingsmaincheckmark">
        <description>Enable ID3  other tagformats</description>
        <type>checkmark</type>
        <id>4</id>
        <label>Use minimal VideoOSD</label>
        <onleft>4</onleft>
        <onright>#defaultcontrol.onright</onright>
        <onup>3</onup>
        <ondown>99</ondown>
      </control>


      
    </control>
        
  </controls>
</window>