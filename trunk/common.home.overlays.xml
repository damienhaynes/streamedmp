<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<!--
different overlays on home screens
-->
<window>
  <controls>
    
    <!-- ::::::::::::::::::: BACKGROUND ::::::::::::::::::: -->
    
    <control>
      <description>dialog bg</description>
      <type>image</type>
      <id>0</id>
      <posX>700</posX>
      <posY>60</posY>
      <width>512</width>
      <height>152</height>
      <texture>dialogprogressbg.png</texture>
      <visible>player.hasaudio|player.hasvideo</visible>
    </control>
    
    <!-- ::::::::::::::::::: MUSIC OVERLAY ::::::::::::::::::: -->
    
    <control>
      <description>music logo</description>
      <type>image</type>
      <id>0</id>
      <posX>718</posX>
      <posY>78</posY>
      <width>114</width>
      <height>114</height>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
      <zoom>yes</zoom>
      <texture>#Play.Current.Thumb</texture>
      <visible>player.hasaudio</visible>
    </control>
    
    <control>
      <description>artist info label</description>
      <type>fadelabel</type>
      <id>0</id>
      <width>340</width>
      <height>40</height>
      <posX>843</posX>
      <posY>80</posY>
      <label>#Play.Current.Artist</label>
      <textcolor>FFFFFFFF</textcolor>
      <font>mediastream12tc</font>
      <visible>player.hasaudio</visible>
    </control>
    <control>
      <description>title info label</description>
      <type>fadelabel</type>
      <id>0</id>
      <width>340</width>
      <height>40</height>
      <posX>843</posX>
      <posY>104</posY>
      <label>#Play.Current.Title</label>
      <textcolor>FFFFFFFF</textcolor>
      <font>mediastream10tc</font>
      <visible>player.hasaudio</visible>
    </control>
    <control>
      <description>album info label</description>
      <type>fadelabel</type>
      <id>0</id>
      <width>340</width>
      <height>40</height>
      <posX>843</posX>
      <posY>123</posY>
      <label>#Play.Current.Album</label>
      <textcolor>FFFFFFFF</textcolor>
      <font>mediastream10c</font>
      <visible>player.hasaudio</visible>
    </control>
    <control>
      <description>play time / duration label</description>
      <type>label</type>
      <id>0</id>
      <width>340</width>
      <height>40</height>
      <posX>843</posX>
      <posY>141</posY>
      <label>#currentplaytime / #duration</label>
      <textcolor>FFFFFFFF</textcolor>
      <font>mediastream10c</font>
      <visible>player.hasaudio</visible>
    </control>
    <control>
      <description>next song label</description>
      <type>label</type>
      <id>0</id>
      <width>42</width>
      <height>40</height>
      <posX>843</posX>
      <posY>167</posY>
      <label>Next:</label>
      <textcolor>FF025984</textcolor>
      <font>mediastream10</font>
      <visible>player.hasaudio</visible>
    </control>
    <control>
      <description>next song info label</description>
      <type>label</type>
      <id>0</id>
      <posX>883</posX>
      <posY>167</posY>
      <width>300</width>
      <height>40</height>
      <label>#Play.Next.Title by #Play.Next.Artist</label>
      <textcolor>FF999999</textcolor>
      <font>mediastream10</font>
      <visible>player.hasaudio</visible>
    </control>
    
  </controls>
</window>