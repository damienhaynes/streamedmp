<window>
	<controls>
    <control>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>675</posY>
      <width>1280</width>
      <height>47</height>
      <texture>imagestreamtitle.png</texture>
			<visible>!facadeview.coverflow</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
		<!-- Video Resolutions / Aspect Ratio-->
    <control>
      <description>720p, 1080i, 1080p</description>
      <type>image</type>
      <id>9799</id>
      <posX>25</posX>
      <posY>684</posY>
      <width>100</width>
      <height>32</height>
      <texture>Logos\MediaInfo\#StreamedMP.MediaInfo.Type\Video\#VideoResolution.png</texture>
      <visible>!facadeview.coverflow</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>SD/HD Fullscreen/Widescreen</description>
      <type>image</type>
      <id>0</id>
      <posX>25</posX>
      <posY>684</posY>
      <width>100</width>
      <height>32</height>
      <texture>Logos\MediaInfo\#StreamedMP.MediaInfo.Type\Video\#VideoResolution #AspectRatio.png</texture>
      <visible>!facadeview.coverflow+!Control.HasThumb(9799)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <!-- Video Codecs -->
    <control>
      <description>Video Codecs</description>
      <type>image</type>
      <id>0</id>
      <posX>125</posX>
      <posY>684</posY>
      <width>100</width>
      <height>32</height>
      <texture>Logos\MediaInfo\#StreamedMP.MediaInfo.Type\Video\#VideoCodec.png</texture>
      <visible>!facadeview.coverflow</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <!-- Audio  Codecs / Channels -->
    <control>
      <description>Audio Codecs / Channels</description>
      <type>image</type>
      <id>9800</id>
      <posX>225</posX>
      <posY>684</posY>
      <width>100</width>
      <height>32</height>
      <texture>Logos\MediaInfo\#StreamedMP.MediaInfo.Type\Audio\#AudioCodec #AudioChannels.png</texture>
      <visible>!facadeview.coverflow</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Audio Codecs - Unknown number of channels</description>
      <type>image</type>
      <id>0</id>
      <posX>225</posX>
      <posY>684</posY>
      <width>100</width>
      <height>32</height>
      <texture>Logos\MediaInfo\#StreamedMP.MediaInfo.Type\Audio\#AudioCodec.png</texture>
      <visible>!facadeview.coverflow+!Control.HasThumb(9800)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <!-- Subtitles -->
    <control>
      <description>Subtitles</description>
      <type>image</type>
      <id>0</id>
      <posX>325</posX>
      <posY>684</posY>
      <width>100</width>
      <height>32</height>
      <texture>Logos\MediaInfo\#StreamedMP.MediaInfo.Type\Misc\Subtitles.png</texture>
      <visible>!facadeview.coverflow+string.equals(#HasSubtitles, True)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
	</controls>
</window>
