<window>
  <id>5900</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#header.label:5900</define>
  <define>#header.image:trailers_logo.png</define>
  <define>#header.hover:hover_my trailers.png</define>
  <controls>
    <import>common.time.xml</import>

    <control>
      <type>multiimage</type>
      <id>98792</id>
      <posx>0</posx>
      <posy>0</posy>
      <width>1366</width>
      <height>768</height>
      <imagepath>movies</imagepath>
      <timeperimage>60000</timeperimage>
      <fadetime>800</fadetime>
      <loop>yes</loop>
      <randomize>true</randomize>
    </control>
    <control>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>87</posY>
      <width>1366</width>
      <height>593</height>
      <texture>glass_shortest.png</texture>
      <visible>!Control.IsVisible(50)</visible>
    </control>
    <control>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>87</posY>
      <width>1366</width>
      <height>593</height>
      <texture>glass_long.png</texture>
      <visible>Control.IsVisible(50)</visible>
    </control>
    
    
    <control>
      <type>label</type>
      <id>1</id>
      <posX>25</posX>
      <posY>125</posY>
      <label>#selecteditem</label>
      <font>font18</font>
      <align>left</align>
      <textcolor>White</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
