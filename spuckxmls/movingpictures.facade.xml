<?xml version="1.0" encoding="utf-8"?>
<!-- 
This file should contain the facade view
-->
<window>
  <controls>
    <control>
      <description>composite control consisting of a list control and a thumbnail panel</description>
      <type>facadeview</type>
      <id>50</id>
      <control>
        <description>Movie List</description>
        <type>listcontrol</type>
        <id>50</id>
        <posX>780</posX>
        <onleft>7</onleft>
      </control>
      <control>
        <description>Filmstrip view</description>
        <type>filmstrip</type>
        <id>50</id>
        <onup>7</onup>
        <posX>12</posX>
        <posY>512</posY>
        <width>1280</width>
        <scrollOffset>4</scrollOffset>
        <spinPosX>1300</spinPosX>
        <spinPosY>720</spinPosY>
        <spinWidth>24</spinWidth>
        <spinHeight>24</spinHeight>
        <spinColor>ffcccccc</spinColor>
        <itemWidth>142</itemWidth>
        <itemHeight>156</itemHeight>
        <textureWidth>120</textureWidth>
        <textureHeight>170</textureHeight>
        <thumbWidth>106</thumbWidth>
        <thumbHeight>156</thumbHeight>
        <thumbPosX>7</thumbPosX>
        <thumbPosY>7</thumbPosY>
        <thumbs flipY="true" diffuse="diffusemirrorwide.png" />
        <InfoImage></InfoImage>
        <imageFolder>-</imageFolder>
        <imageFolderFocus>thumbborder.png</imageFolderFocus>
        <frame>-</frame>
        <frameFocus>thumbborder.png</frameFocus>
        <showFrame>no</showFrame>
        <showFolder>yes</showFolder>
        <showBackGround>no</showBackGround>
        <showInfoImage>no</showInfoImage>
        <thumbAnimation effect="zoom" start="100,100" end="120,120" time="110">focus</thumbAnimation>
        <thumbAnimation effect="zoom" start="120,120" end="100,100" time="110">unfocus</thumbAnimation>
      </control>
    </control>
    
    <control>
      <description>Spin Control BG</description>
      <type>image</type>
      <id>0</id>
      <posX>1065</posX>
      <posY>671</posY>
      <width>180</width>
      <height>32</height>
      <texture>mediacountbg.png</texture>
      <visible>facadeview.list+Control.IsVisible(50)</visible>
    </control>
    
    <control>
      <description>Spin Control Label</description>
      <type>label</type>
      <label>PAGE</label>
      <id>0</id>
      <posX>1075</posX>
      <posY>673</posY>
      <font>mediastream12c</font>
      <textcolor>ff025984</textcolor>
      <visible>facadeview.list+Control.IsVisible(50)</visible>
    </control>
  </controls>
</window>