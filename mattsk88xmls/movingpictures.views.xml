<?xml version="1.0" encoding="utf-8"?>
<!-- 
This file should contain all items visible when the plug-in is in its various facade views (listview, filmstrip,large icons, small icons.
*************For Filmstrip only features********************    
<visible>facadeview.filmstrip+Control.IsVisible(50)</visible>     
*************For Listview Only features********************    
<visible>facadeview.list+Control.IsVisible(50)</visible> 
*************For Large Icon Only features********************    
<visible>facadeview.largeicons+Control.IsVisible(50)</visible>
*************For Small Icon Only features********************    
<visible>facadeview.smallicons+Control.IsVisible(50)</visible>  -->
<window>
  <controls>
    <!--*********************FilmStrip**************************-->
    <define>#filmstrip.available:true</define>
    <control>
      <description>Movie Title</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>686</posX>
      <posY>420</posY>
      <width>570</width>
      <font>mediastream16tc</font>
      <label>#MovingPictures.SelectedMovie.title</label>
      <textcolor>FFffffff</textcolor>
      <visible>facadeview.filmstrip+Control.IsVisible(50)</visible>
    </control>
    <control Style="smallTitleB">
      <type>label</type>
      <label>Genre</label>
      <posX>686</posX>
      <posY>485</posY>
      <visible>facadeview.filmstrip+Control.IsVisible(50)</visible>
    </control>
    <control Style="smallTitle">
      <type>label</type>
      <label>#MovingPictures.SelectedMovie.genres</label>
      <posX>825</posX>
      <posY>485</posY>
      <width>580</width>
      <visible>facadeview.filmstrip+Control.IsVisible(50)</visible>
    </control>
    <control Style="smallTitleB">
      <type>label</type>
      <label>Year</label>
      <posX>686</posX>
      <posY>510</posY>
      <visible>facadeview.filmstrip+Control.IsVisible(50)</visible>
    </control>
    <control Style="smallTitle">
      <type>label</type>
      <label>#MovingPictures.SelectedMovie.year</label>
      <posX>825</posX>
      <posY>510</posY>
      <visible>facadeview.filmstrip+Control.IsVisible(50)</visible>
    </control>
    <control Style="smallTitleB">
      <type>label</type>
      <label>Runtime</label>
      <posX>686</posX>
      <posY>535</posY>
      <visible>facadeview.filmstrip+Control.IsVisible(50)</visible>
    </control>
    <control Style="smallTitle">
      <type>label</type>
      <label>#MovingPictures.SelectedMovie.extra.runtime.hour hour(s), #MovingPictures.SelectedMovie.extra.runtime.minute minutes</label>
      <posX>825</posX>
      <posY>535</posY>
      <width>580</width>
      <visible>facadeview.filmstrip+Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Summary</description>
      <type>textboxscrollup</type>
      <id>0</id>
      <posX>686</posX>
      <posY>560</posY>
      <width>580</width>
      <height>130</height>
      <textcolor>ffffff</textcolor>
      <seperator>-----------------------------------------------------------------------------------</seperator>
      <font>mediastream11</font>
      <label>#MovingPictures.SelectedMovie.summary</label>
      <visible>facadeview.filmstrip+Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Top Bar</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>51</height>
      <texture>overlay_topbar.png</texture>
      <visible>facadeview.filmstrip+Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Bottom Overlay</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>400</posY>
      <width>1280</width>
      <height>320</height>
      <texture>filmstrip_overlay.png</texture>
      <visible>facadeview.filmstrip+Control.IsVisible(50)</visible>
    </control>
    <!--*********************ListView**************************-->
    <define>#list.available:true</define>
    <control>
      <description>Movie Title</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>270</posX>
      <posY>420</posY>
      <width>500</width>
      <font>mediastream16tc</font>
      <label>#MovingPictures.SelectedMovie.title</label>
      <align>left</align>
      <visible>facadeview.list+Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Year Value</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>270</posX>
      <posY>450</posY>
      <width>300</width>
      <font>mediastream12tc</font>
      <textcolor>ff989898</textcolor>
      <label>#MovingPictures.SelectedMovie.year</label>
      <visible>facadeview.list+Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Runtime Label</description>
      <type>label</type>
      <id>0</id>
      <posX>270</posX>
      <posY>650</posY>
      <textcolor>ff989898</textcolor>
      <font>mediastream12tc</font>
      <label>RUNTIME</label>
      <visible>facadeview.list+Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Runtime</description>
      <type>label</type>
      <id>0</id>
      <posX>270</posX>
      <posY>675</posY>
      <width>300</width>
      <font>mediastream11tc</font>
      <label>#MovingPictures.SelectedMovie.extra.runtime.hour Hours, #MovingPictures.SelectedMovie.extra.runtime.minute Minutes</label>
      <visible>facadeview.list+Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Rating Label</description>
      <type>label</type>
      <id>0</id>
      <posX>570</posX>
      <posY>650</posY>
      <textcolor>ff989898</textcolor>
      <font>mediastream12tc</font>
      <label>RATING</label>
      <visible>facadeview.list+Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Genre Label</description>
      <type>label</type>
      <id>0</id>
      <posX>20</posX>
      <posY>655</posY>
      <textcolor>#smalltitle.color</textcolor>
      <font>font14</font>
      <label>GENRE:</label>
      <visible>false</visible>
    </control>
    <control>
      <description>Genre Value</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>180</posX>
      <posY>655</posY>
      <width>300</width>
      <font>font14</font>
      <label>#MovingPictures.SelectedMovie.genres</label>
      <visible>false</visible>
    </control>
    <control>
      <description>Summary</description>
      <type>textboxscrollup</type>
      <id>0</id>
      <posX>270</posX>
      <posY>480</posY>
      <width>520</width>
      <height>140</height>
      <textcolor>ffffff</textcolor>
      <seperator>-------------------------------</seperator>
      <font>mediastream11</font>
      <textalign>left</textalign>
      <label>#MovingPictures.SelectedMovie.summary</label>
      <visible>facadeview.list+Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Overlay</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>720</height>
      <texture>fanartoverlay.png</texture>
      <visible>facadeview.list+Control.IsVisible(50)</visible>
    </control>
    <!--**********************Images For list View********************-->
    <control>
      <type>imagelist</type>
      <id>101</id>
      <posX>570</posX>
      <posY>675</posY>
      <width>350</width>
      <height>35</height>
      <textureWidth>17</textureWidth>
      <textureHeight>17</textureHeight>
      <subitems>
        <subitem>greystar.png</subitem>
        <subitem>starwhite.png</subitem>
      </subitems>
      <orientation>horizontal</orientation>
      <align>left</align>
      <imagesToDraw>10</imagesToDraw>
      <visible>facadeview.list+Control.IsVisible(50)</visible>
      <percentage>#MovingPictures.SelectedMovie.score</percentage>
    </control>
    <control>
      <id>60</id>
      <type>image</type>
      <posX>14</posX>
      <posY>300</posY>
      <width>241</width>
      <height>342</height>
      <texture flipY="true" diffuse="Thumb_Mask.png">#MovingPictures.Coverart</texture>
      <!--<animation effect="rotatey" start="-60" end="-60" center="15,10" time="0" reversible="false">visible</animation>-->
      <visible>facadeview.list+Control.IsVisible(50)</visible>
    </control>
	<control>
      <description>Rounded cover edges</description>
      <type>image</type>
      <id>246</id>
      <posX>00</posX>
      <posY>287</posY>
      <width>268</width>
      <height>372</height>
      <texture>round.poster.frame.png</texture>
      <!--<visible>facadeview.list+Control.HasThumb(60)+Control.IsVisible(50)</visible>--> <!-- Doesn't work when first entering the plugin -->
	  <visible>facadeview.list+Control.IsVisible(50)</visible>
      <!--<animation effect="rotatey" start="-55" end="-55" center="15,0" time="0" reversible="false">visible</animation>-->
    </control>
    <control>
      <type>image</type>
      <id>0</id>
      <posX>13</posX>
      <posY>294</posY>
      <width>228</width>
      <height>380</height>
      <texture>dvd_frame.png</texture>
      <visible>false</visible>
      <animation effect="rotatey" start="-55" end="-55" center="15,0" tween="back" ease="easeout" time="500" reversible="false">visible</animation>
    </control>
    <control>
      <type>label</type>
      <id>69</id>
      <posX>1400</posX>
      <posY>900</posY>
      <width>100</width>
      <height>1</height>
      <visible>facadeview.list+Control.IsVisible(50)</visible>
    </control>
    <!--******************Icon View*************************************-->
    <define>#largeicons.available:true</define>
    <control>
      <description>Backdrop Overlay - FilmStripView</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>720</height>
      <texture>movieviewbg.png</texture>
      <visible>facadeview.smallicons+Control.IsVisible(50)|facadeview.largeicons+Control.IsVisible(50)</visible>
    </control>
    <define>#smallicons.available:true</define>
    <control>
      <description>View Info</description>
      <type>label</type>
      <id>0</id>
      <posX>920</posX>
      <posY>100</posY>
      <width>486</width>
      <font>font14</font>
      <label>facadeview.smallicons</label>
      <align>left</align>
      <visible>false</visible>
    </control>
    <control>
      <description>Movie Title</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>35</posX>
      <posY>505</posY>
      <width>500</width>
      <font>mediastream16tc</font>
      <label>#MovingPictures.SelectedMovie.title</label>
      <align>left</align>
      <visible>facadeview.smallicons+Control.IsVisible(50)|facadeview.largeicons+Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Summary</description>
      <type>textboxscrollup</type>
      <id>0</id>
      <posX>35</posX>
      <posY>540</posY>
      <width>1250</width>
      <height>150</height>
      <textcolor>ffffff</textcolor>
      <seperator>-------------------------------</seperator>
      <font>mediastream11</font>
      <textalign>left</textalign>
      <label>#MovingPictures.SelectedMovie.summary</label>
      <visible>facadeview.smallicons+Control.IsVisible(50)|facadeview.largeicons+Control.IsVisible(50)</visible>
    </control>
  </controls>
</window>