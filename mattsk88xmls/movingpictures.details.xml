<?xml version="1.0" encoding="utf-8"?>
<!-- 
This file should contain all items visible when the plug-in
is on the movie details screen. All controls should use the 
following tag for proper visibility:
    
<visible>!Control.IsVisible(50)</visible>     
-->
<window>
  <controls>
    <control>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <height>200</height>
      <width>1366</width>
      <texture>overlay_top_transparent.png</texture>
      <visible>!Control.IsVisible(50)</visible>
    </control>
    <control>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>440</posY>
      <height>328</height>
      <width>1366</width>
      <texture>overlay_bottom_transparent.png</texture>
      <visible>!Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Play Button</description>
      <type>button</type>
      <id>6</id>
      <onright>7</onright>
      <posX>750</posX>
      <posY>600</posY>
      <width>35</width>
      <height>35</height>
      <textureFocus>moving_pictures_play_focus.png</textureFocus>
      <textureNoFocus>moving_pictures_play.png</textureNoFocus>
      <visible>!Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Cycle Details Button (not implemented yet)</description>
      <type>button</type>
      <id>7</id>
      <onleft>6</onleft>
      <posX>800</posX>
      <posY>600</posY>
      <width>35</width>
      <height>35</height>
      <textureFocus>moving_pictures_details_focus.png</textureFocus>
      <textureNoFocus>moving_pictures_details.png</textureNoFocus>
      <visible>false</visible>
    </control>
    <control>
      <description>DVD Frame</description>
      <type>image</type>
      <id>0</id>
      <posX>40</posX>
      <posY>435</posY>
      <height>400</height>
      <width>200</width>
      <height>300</height>
      <texture>#MovingPictures.SelectedMovie.coverfullpath</texture>
      <visible>!Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>DVD Cover</description>
      <type>image</type>
      <id>0</id>
      <posX>20</posX>
      <posY>420</posY>
      <height>340</height>
      <width>240</width>
      <texture>dvd_frame.png</texture>
      <visible>!Control.IsVisible(50)</visible>
    </control>
    <control>
      <type>image</type>
      <id>0</id>
      <posX>83</posX>
      <posY>110</posY>
      <height>1</height>
      <width>1200</width>
      <texture>hbar1white.png</texture>
      <visible>!Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Tagline</description>
      <type>label</type>
      <id>0</id>
      <posX>0</posX>
      <posY>90</posY>
      <width>1366</width>
      <textcolor>ffffff</textcolor>
      <font>font14</font>
      <label>#MovingPictures.SelectedMovie.tagline</label>
      <align>center</align>
      <visible>!Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Movie Title</description>
      <type>label</type>
      <id>0</id>
      <posX>0</posX>
      <posY>30</posY>
      <width>1366</width>
      <textcolor>ffffff</textcolor>
      <font>font18</font>
      <label>#MovingPictures.SelectedMovie.title</label>
      <align>center</align>
      <visible>!Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Director Label</description>
      <type>label</type>
      <id>0</id>
      <posX>290</posX>
      <posY>510</posY>
      <textcolor>#smalltitle.color</textcolor>
      <font>font14</font>
      <label>DIRECTOR:</label>
      <visible>!Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Director Value</description>
      <type>label</type>
      <id>0</id>
      <posX>460</posX>
      <posY>510</posY>
      <textcolor>ffffff</textcolor>
      <font>font14</font>
      <label>#MovingPictures.SelectedMovie.directors</label>
      <visible>!Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Genre Label</description>
      <type>label</type>
      <id>0</id>
      <posX>290</posX>
      <posY>540</posY>
      <textcolor>#smalltitle.color</textcolor>
      <font>font14</font>
      <label>GENRE:</label>
      <visible>!Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Genre Value</description>
      <type>label</type>
      <id>0</id>
      <posX>460</posX>
      <posY>540</posY>
      <width>1366</width>
      <textcolor>ffffff</textcolor>
      <font>font14</font>
      <label>#MovingPictures.SelectedMovie.genres</label>
      <visible>!Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Year Label</description>
      <type>label</type>
      <id>0</id>
      <posX>290</posX>
      <posY>570</posY>
      <textcolor>#smalltitle.color</textcolor>
      <font>font14</font>
      <label>YEAR:</label>
      <visible>!Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Year</description>
      <type>label</type>
      <id>0</id>
      <posX>460</posX>
      <posY>570</posY>
      <width>1366</width>
      <textcolor>ffffff</textcolor>
      <font>font14</font>
      <label>#MovingPictures.SelectedMovie.year</label>
      <visible>!Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Runtime Label</description>
      <type>label</type>
      <id>0</id>
      <posX>290</posX>
      <posY>600</posY>
      <textcolor>#smalltitle.color</textcolor>
      <font>font14</font>
      <label>RUNTIME:</label>
      <visible>!Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Runtime</description>
      <type>label</type>
      <id>0</id>
      <posX>460</posX>
      <posY>600</posY>
      <textcolor>ffffff</textcolor>
      <font>font14</font>
      <label>#MovingPictures.SelectedMovie.extra.runtime.hour Hours, #MovingPictures.SelectedMovie.extra.runtime.minute Minutes</label>
      <visible>!Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Summary</description>
      <type>textboxscrollup</type>
      <id>0</id>
      <posX>290</posX>
      <posY>630</posY>
      <width>990</width>
      <height>120</height>
      <textcolor>ffffff</textcolor>
      <seperator>-----------------------------------------------------------------------------------</seperator>
      <font>font12</font>
      <label>#MovingPictures.SelectedMovie.summary</label>
      <visible>!Control.IsVisible(50)</visible>
    </control>
    <control>
      <type>imagelist</type>
      <id>101</id>
      <posX>550</posX>
      <posY>45</posY>
      <width>310</width>
      <height>21</height>
      <textureWidth>30</textureWidth>
      <textureHeight>30</textureHeight>
      <subitems>
        <subitem>greystar.png</subitem>
        <subitem>stargood.png</subitem>
      </subitems>
      <orientation>horizontal</orientation>
      <align>left</align>
      <imagesToDraw>10</imagesToDraw>
      <visible>!Control.IsVisible(50)</visible>
      <percentage>#MovingPictures.SelectedMovie.score</percentage>
    </control>
    <!--control>
      <description>Rating</description>
      <type>label</type>
      <id>0</id>
      <posX>480</posX>
      <posY>540</posY>
      <width>1366</width>
      <textcolor>ffffff</textcolor>
      <font>font14</font>
      <label>#MovingPictures.SelectedMovie.score</label>
      <visible>!Control.IsVisible(50)</visible>
    </control-->
  </controls>
</window>