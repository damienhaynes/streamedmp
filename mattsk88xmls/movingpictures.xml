        <type>image</type>
        <posX>1002</posX>
        <posY>0</posY>
        <width>278</width>
        <height>720</height>
        <texture>hiddenmenu_right.png</texture>
        <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="100" start="300,0">visible</animation>
        <animation effect="slide" time="0" end="300,0">hidden</animation>
      </control>
      <control>
        <id>0</id>
        <label>SWITCH</label>
        <type>label</type>
        <font>mediastream12tc</font>
        <posX>1040</posX>
        <posY>226</posY>
        <visible>!Control.HasFocus(50)+Control.IsVisible(50)</visible>
        <animation effect="slide" time="100" start="300,0">visible</animation>
        <animation effect="slide" time="0" end="300,0">hidden</animation>
      </control>
      <control>
        <id>0</id>
        <label>SETTINGS</label>
        <type>label</type>
        <font>mediastream12tc</font>
        <posX>1040</posX>
        <posY>310</posY>
        <visible>!Control.HasFocus(50)+Control.IsVisible(50)</visible>
        <animation effect="slide" time="100" start="300,0">visible</animation>
        <animation effect="slide" time="0" end="300,0">hidden</animation>
      </control>
      <control>
        <type>group</type>
        <description>group element</description>
        <visible>!Control.HasFocus(50)+Control.IsVisible(50)</visible>
        <animation effect="slide" time="100" start="300,0">visible</animation>
        <animation effect="slide" time="0" end="300,0">hidden</animation>
        <posX>1040</posX>
        <posY>250</posY>
        <width>220</width>
        <height>720</height>
        <layout>StackLayout</layout>
        <control>
          <description>Toggle View</description>
          <type>button</type>
          <id>2</id>
          <label>Toggle View</label>
          <onleft>50</onleft>
          <onup>66610</onup>
        </control>
        <control>
          <description>Switch View</description>
          <type>button</type>
          <id>3</id>
          <label>Switch View</label>
          <onleft>50</onleft>
        </control>
        <control>
          <description>Empty button</description>
          <type>button</type>
          <id>0</id>
          <label>-</label>
          <visible>false</visible>
        </control>
        <!--<control>
          <description>Filters Menu</description>
          <type>button</type>
          <id>4</id>
          <label>Filters</label>
          <onleft>50</onleft>
          <visible>false</visible>
        </control>
        <control>
          <description>Settings Menu</description>
          <type>button</type>
          <id>5</id>
          <label>Settings</label>
          <onleft>50</onleft>
          <visible>false</visible>
        </control>-->
        <control>
          <description>Video Settings</description>
          <type>button</type>
          <id>66610</id>
          <label>Video Settings</label>
          <hyperlink>703</hyperlink>
          <ondown>2</ondown>
          <onleft>50</onleft>
        </control>
      </control>
    </control>
   
