<window>
  <id>843895423</id>
  <defaultcontrol>11</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#header.label:XM Radio</define>
  <define>#header.image:-</define>
  <define>#header.hover:hover_my radio.png</define>
  <controls>
    <import>common.window.xml</import>
    <import>common.time.xml</import>
    <!-- Group For Sorting View and Order By -->
    <control>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
        <width>220</width>
        <height>720</height>
        <texture>streamed_submenu_bg.png</texture>
        <colorDiffuse>fffffffff</colorDiffuse>
      <animation effect="slide" time="10" end="-300,0">WindowClose</animation>
      <animation effect="slide" time="10" start="-300,0">WindowOpen</animation>
    </control>
    <control>
      <type>group</type>
      <description>group element</description>
      <animation effect="slide" time="10" end="-300,0">WindowClose</animation>
      <animation effect="slide" time="10" start="-300,0">WindowOpen</animation>
      <posX>20</posX>
      <posY>80</posY>
      <layout>StackLayout</layout>
      <control>
        <description>View List As</description>
        <type>button</type>
        <id>11</id>
        <onleft>11</onleft>
        <onright>30</onright>
        <onup>11</onup>
        <ondown>12</ondown>
        <subitems>
          <subitem>101</subitem>
          <subitem>100</subitem>
          <subitem>417</subitem>
        </subitems>
      </control>
      <control>
        <description>Sort List By</description>
        <type>sortbutton</type>
        <id>12</id>
        <onleft>11</onleft>
        <onright>30</onright>
        <onup>11</onup>
        <ondown>12</ondown>
        <subitems>
          <subitem>620</subitem>
          <subitem>269</subitem>
          <subitem>268</subitem>
        </subitems>
      </control>
    </control>
    <!-- Group For Sorting View and Order By -->
    <!-- Current Playing Channel Information -->
    <control>
      <description>Image Displaying Current Channel</description>
      <type>image</type>
      <id>21</id>
      <visible>false</visible>
      <posX>0</posX>
      <posY>220</posY>
      <width>300</width>
      <height>129</height>
      <centered>yes</centered>
      <keepaspectratio>yes</keepaspectratio>
    </control>
    <!-- Current Playing Channel Information -->
    <!-- All Channel Now Playing Information -->
    <control>
      <description>composite control consisting of a list control and a thumbnail panel</description>
      <type>facadeview</type>
      <id>30</id>
      <control>
        <description>listcontrol</description>
        <type>listcontrol</type>
        <id>30</id>
        <textureHeight>65</textureHeight>
        <itemWidth>95</itemWidth>
        <itemHeight>45</itemHeight>
        <IconYOff>4</IconYOff>
        <font2>font12</font2>
        <textXOff>25</textXOff>
        <textXOff3>130</textXOff3>
        <textYOff3>30</textYOff3>
      </control>
      <control>
        <description>Thumbnail When Viewing As Icons</description>
        <type>thumbnailpanel</type>
        <id>30</id>
      </control>
    </control>
  </controls>
</window>