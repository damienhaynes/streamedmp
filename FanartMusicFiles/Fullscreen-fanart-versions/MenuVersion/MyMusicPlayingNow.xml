<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>510</id>
  <defaultcontrol>1701</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <disabletopbar>no</disabletopbar>
  <vumeter>yes</vumeter>
  <define>#header.hover:hover_my music.png</define>
  <controls>  
    <control>
      <description>music background image</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>720</height>
      <texture>#header.hover</texture>
      <animation effect="fade" time="400" delay="0">WindowOpen</animation>
    </control>
    <import>mymusicnowplaying.autofanart.xml</import>   
    <control>
      <description>bottom black bg</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>580</posY>
      <width>1280</width>
      <height>201</height>
      <colordiffuse>ffFFFFFF</colordiffuse>
      <texture>black.png</texture>
    </control>   
  
    <control>
      <type>image</type>
      <description>album art image</description>
      <id>112</id>
      <posX>5</posX>
      <posY>585</posY>
      <width>130</width>
      <height>130</height>
      <texture>-</texture>
    </control>
    
    <control>
      <type>multiimage</type>
      <id>9990</id>
      <posX>650</posX>
      <posY>635</posY>
      <width>130</width>
      <height>50</height>
      <imagepath>Play</imagepath>
      <timeperimage>50</timeperimage>
      <fadetime>10</fadetime>
      <loop>yes</loop>
      <randomize>yes</randomize>
      <visible>Player.HasAudio + Player.playing</visible>
      <animation effect="fade" time="10">VisibleChange</animation>
    </control>    
    <import>music.nowplaying.fullscreen.common.xml</import>   
    <!--<import>common.window.xml</import>-->
    <import>common.time.xml</import>
    
  </controls>
</window>
