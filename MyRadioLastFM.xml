<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>7890</id>
  <defaultcontrol>10</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <define>#header.hover:hover_my music.png</define>
  <controls>
    
    <!--            :: BACKGROUND :: OVERLAY ::            -->
    
    <control>
      <type>image</type>
      <description>BG</description>
      <id>0</id>
      <width>1280</width>
      <height>720</height>
      <animation effect="fade" time="400" delay="0">WindowOpen</animation>
    </control>
    
    <control>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>720</height>
      <texture>#header.hover</texture>
      <animation effect="fade" time="400" delay="0">WindowOpen</animation>
    </control>
    
    <control>
      <description>overlay image</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>720</height>
      <texture>mainoverlay.png</texture>
    </control>
    
    <!--            :: MENU ::            -->
    
    <control>
      <type>image</type>
      <posX>1002</posX>
      <posY>0</posY>
      <width>278</width>
      <height>720</height>
      <texture>hiddenmenu_right.png</texture>
    </control>
    
    <control>
      <id>0</id>
      <label>MENU</label>
      <type>label</type>
      <font>mediastream12tc</font>
      <posX>1040</posX>
      <posY>225</posY>
    </control>
    
    <control>
      <type>group</type>
      <description>group element</description>
      <posX>1040</posX>
      <posY>250</posY>
      <width>220</width>
      <height>720</height>
      <layout>StackLayout</layout>
      
      <control>
        <description>start a stream</description>
        <type>button</type>
        <id>10</id>
        <label>34001</label>
        <onleft>50</onleft>
        <onright>50</onright>
      </control>
      
      <control>
        <description>choose artist</description>
        <type>button</type>
        <id>15</id>
        <label>Artists</label>
        <onleft>50</onleft>
        <onright>50</onright>
      </control>
      
      <control>
        <description>chose tag</description>
        <type>button</type>
        <id>20</id>
        <label>Tags</label>
        <onleft>50</onleft>
        <onright>50</onright>
      </control>
      
      <control>
        <description>chose friend</description>
        <type>button</type>
        <id>30</id>
        <label>Friends</label>
        <onleft>50</onleft>
        <onright>50</onright>
      </control>
      
      <control>
        <description>toggle submit mode</description>
        <type>togglebutton</type>
        <id>35</id>
        <label>34014</label>
        <onleft>50</onleft>
        <onright>50</onright>
        <visible>true</visible>
      </control>
      
      <control>
        <description>toggle discovery mode</description>
        <type>togglebutton</type>
        <id>40</id>
        <label>34013</label>
        <onleft>50</onleft>
        <onright>50</onright>
        <visible>false</visible>
      </control>
      
    </control>
    
