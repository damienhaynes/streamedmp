<?xml version="1.0" encoding="utf-8"?>
<window>
  <controls>
    <!-- Poster Image List View -->
    <control>
      <description>Default Cover Art</description>
      <type>image</type>
      <id>0</id>
      <posX>26</posX>
      <posY>250</posY>
      <width>267</width>
      <height>390</height>
      <texture>defaultdvdcover.png</texture>
      <visible>facadeview.list+!control.isvisible(24)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Cover Art</description>
      <type>image</type>
      <id>60</id>
      <posX>31</posX>
      <posY>254</posY>
      <width>257</width>
      <height>380</height>
      <texture flipY="true" diffuse="diffusemirrorwide.png">#st_poster</texture>
      <visible>facadeview.list+!control.isvisible(24)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Cover Art Glass Overlay</description>
      <type>image</type>
      <id>0</id>
      <posX>31</posX>
      <posY>254</posY>
      <width>228</width>
      <height>177</height>
      <texture>glassoverlay2.png</texture>
      <visible>facadeview.list+!control.isvisible(24)+Control.HasThumb(60)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Movie Title</description>
      <type>label</type>
      <id>0</id>
      <posX>308</posX>
      <posY>251</posY>
      <width>370</width>
      <font>mediastream16tc</font>
      <label>#selecteditem</label>
      <textcolor>ffFFFFFF</textcolor>
      <shadowAngle>45</shadowAngle>
      <shadowDistance>4</shadowDistance>
      <shadowColor>#shadow.light</shadowColor>
      <visible>facadeview.list+control.isvisible(50)+!control.isvisible(24)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Genres</description>
      <type>label</type>
      <label>#st_genre</label>
      <id>0</id>
      <posX>309</posX>
      <posY>282</posY>
      <width>370</width>
      <font>mediastream11tc</font>
      <textcolor>ff909090</textcolor>
      <shadowAngle>45</shadowAngle>
      <shadowDistance>3</shadowDistance>
      <shadowColor>#shadow.dark</shadowColor>
      <visible>facadeview.list+control.isvisible(50)+!control.isvisible(24)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <id>0</id>
      <type>label</type>
      <label>#(string.format('{0:0.0} / 10', cflt(#st_userrating)))</label>
      <posX>445</posX>
      <posY>305</posY>
      <width>200</width>
      <align>left</align>
      <font>mediastream11c</font>
      <shadowAngle>45</shadowAngle>
      <shadowDistance>2</shadowDistance>
      <shadowColor>#shadow.light</shadowColor>
      <visible>facadeview.list+control.isvisible(50)+!control.isvisible(24)+!string.equals(#st_userrating,0)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Star Rating Image</description>
      <type>imagelist</type>
      <id>0</id>
      <width>115</width>
      <height>22</height>
      <posX>309</posX>
      <posY>305</posY>
      <textureWidth>24</textureWidth>
      <textureHeight>24</textureHeight>
      <subitems>
        <subitem>starwhitehollow.png</subitem>
        <subitem>starwhite.png</subitem>
      </subitems>
      <orientation>horizontal</orientation>
      <align>left</align>
      <imagesToDraw>5</imagesToDraw>
      <percentage>#st_userrating</percentage>
      <visible>facadeview.list+!control.isvisible(24)+control.isvisible(50)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control>
      <description>Summary</description>
      <type>textboxscrollup</type>
      <id>0</id>
      <posX>308</posX>
      <posY>338</posY>
      <width>380</width>
      <height>223</height>
      <textcolor>ffFFFFFF</textcolor>
      <seperator>-----------------------------------------------------------------------------------</seperator>
      <font>mediastream11</font>
      <label>#st_plot</label>
      <visible>facadeview.list+control.isvisible(50)+!control.isvisible(24)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control Style="smallTitleB">
      <description>Certification Label</description>
      <id>0</id>
      <type>label</type>
      <label>MPAA</label>
      <posX>310</posX>
      <posY>572</posY>
      <width>140</width>
      <visible>facadeview.list+control.isvisible(50)+!control.isvisible(24)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control Style="smallTitle">
      <description>Certification</description>
      <id>0</id>
      <type>label</type>
      <label>#(iif(neq(#st_rating,''),#st_rating,'N/A'))</label>
      <posX>520</posX>
      <posY>573</posY>
      <width>200</width>
      <visible>facadeview.list+control.isvisible(50)+!control.isvisible(24)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control Style="smallTitleB">
      <description>Runtime Label</description>
      <id>0</id>
      <type>label</type>
      <label>#StreamedMP.Runtime</label>
      <posX>310</posX>
      <posY>594</posY>
      <width>140</width>
      <visible>facadeview.list+control.isvisible(50)+!control.isvisible(24)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control Style="smallTitle">
      <description>Runtime</description>
      <id>0</id>
      <type>label</type>
      <label>#(iif(neq(#st_runtime,''),#st_runtime,'N/A'))</label>
      <posX>520</posX>
      <posY>595</posY>
      <width>200</width>
      <visible>facadeview.list+control.isvisible(50)+!control.isvisible(24)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control Style="smallTitleB">
      <description>Release Date Label</description>
      <type>label</type>
      <label>#StreamedMP.ReleaseDate</label>
      <posX>310</posX>
      <posY>616</posY>
      <width>140</width>
      <visible>facadeview.list+control.isvisible(50)+!control.isvisible(24)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control Style="smallTitle">
      <description>Year</description>
      <id>0</id>
      <type>label</type>
      <label>#(iif(neq(#st_releasedate,''),#st_releasedate,'N/A'))</label>
      <posX>520</posX>
      <posY>617</posY>
      <visible>facadeview.list+control.isvisible(50)+!control.isvisible(24)</visible>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
  </controls>
</window>
