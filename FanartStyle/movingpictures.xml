<?xml version="1.0" encoding="utf-8"?>
<!-- 
This file should contain the facade view and all gui
elements that should remain on screen during all or
multiple view modes. 
-->
<window>
  <id>96742</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <!-- 
  This set of defines are read by the plug-in and used to determine aspects of it's behavior. These
  are parameters to give the skinner a tiny bit more control over the presentation.
  -->
  <!-- true if this skin implements the largeicons view -->
  <define>#largeicons.available:true</define>
  <!-- true if backdrop (fanart) should be displayed in this view -->
  <define>#largeicons.backdrop.used:false</define>
  <!-- Set to true if this skin implements the smallicons view -->
  <define>#smallicons.available:true</define>
  <!-- true if backdrop (fanart) should be displayed in this view -->
  <define>#smallicons.backdrop.used:false</define>
  <!-- Set to true if this skin implements the list view -->
  <define>#list.available:true</define>
  <!-- true if backdrop (fanart) should be displayed in this view -->
  <define>#list.backdrop.used:true</define>
  <!-- Set to true if this skin implements the filmstrip view -->
  <define>#filmstrip.available:true</define>
  <!-- true if backdrop (fanart) should be displayed in this view -->
  <define>#filmstrip.backdrop.used:true</define>
  
  <define>#smalltitle.color:FF909090</define>
  
  <!-- Setup will replace the *.png with a '-' if user does not want them -->
  <define>#movingpictures_RoundedPosters:round.poster.frame.png</define>
  
  <controls>
  
	<!--            :: DUMMY CONTROLS ::            -->
    <control>
      <description>Visibile when filtering by watched flag. Only unwatched movies are listed.</description>
      <type>label</type>
      <id>8</id>
      <posX>-50</posX>
      <posY>-50</posY>
      <width>0</width>
    </control>
    <control>
      <description>Visibile when the currently selected movie has been watched</description>
      <type>label</type>
      <id>9</id>
      <posX>-50</posX>
      <posY>-50</posY>
      <width>0</width>
    </control>
    <control>
      <description>Visibile when filtering by remote control searching.</description>
      <type>label</type>
      <id>10</id>
      <posX>-50</posX>
      <posY>-50</posY>
      <width>0</width>
    </control>    
	
	<!--            :: BACKDROPS ::            -->
	<control>
      <description>Background to be displayed when there is no Movie Backdrop</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>720</height>
      <texture>hover_moving pictures.png</texture>
    </control>
	
    <control>
      <description>Movie Backdrop (Fan Art) - Plug-in sets to invisible, if no art.</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>720</height>
      <texture>#MovingPictures.Backdrop</texture>
      <animation effect="fade" start="0" end="100" time="3000">WindowOpen</animation>
      <animation effect="fade" start="0" end="100" time="200">Visible</animation>
      <animation effect="fade" start="100" end="0" time="200" delay="200">Hidden</animation>
      <!-- Do not modify the visibility for this component. It is handled by the plug-in. Use the above
           defines for conditional visibility if you dont want to use fan-art only specific views. -->
    </control>
    <control>
      <description>Alternate Movie Backdrop - Toggles Load with Component 1 for animations on visibiltiy</description>
      <type>image</type>
      <id>11</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>720</height>
      <texture>#MovingPictures.Backdrop2</texture>
      <animation effect="fade" start="0" end="100" time="350">Visible</animation>
      <animation effect="fade" start="100" end="0" time="200" delay="200">Hidden</animation>
      <!-- Do not modify the visibility for this component. It is handled by the plug-in. Use the above
           defines for conditional visibility if you dont want to use fan-art only specific views. -->
    </control>
    
	<!--            :: HIDDEN MENU ::            -->
    <import>movingpictures.hiddenmenu.xml</import>
   
    <!--Imported Facades-->
    <import>movingpictures.details.xml</import>
    <import>movingpictures.views.xml</import>
    <import>movingpictures.facade.xml</import>
	
    <control>
      <type>image</type>
      <id>0</id>
      <posX>665</posX>
      <posY>405</posY>
      <width>616</width>
      <height>325</height>
      <texture>mpinfo_filmbox.png</texture>
      <visible>facadeview.filmstrip+Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>Movie Count BG</description>
      <type>image</type>
      <id>0</id>
      <posX>1096</posX>
      <posY>10</posY>
      <width>147</width>
      <height>31</height>
      <texture>mediacountbg.png</texture>
	  <visible>Control.IsVisible(50)</visible>
    </control>	
    <control>
      <description>Movies Label</description>
      <type>label</type>
      <label>#MovingPictures.Translation.Movies.Label:</label>
      <id>0</id>
      <posX>1103</posX>
      <posY>14</posY>
      <font>mediastream11tc</font>
      <textcolor>ff025984</textcolor>
	  <visible>Control.IsVisible(50)</visible>
    </control>
	<control>
      <type>label</type>
      <id>0</id>
      <posX>1220</posX>
      <posY>13</posY>
      <width>350</width>
      <font>mediastream11c</font>
      <align>right</align>
      <label>#MovingPictures.general.filteredmoviecount</label>
	  <visible>Control.IsVisible(50)</visible>
    </control>
	
    <control>	  
      <type>image</type>
      <id>101</id>
      <posX>730</posX>
      <posY>454</posY>
      <width>115</width>
      <height>22</height>      
      <align>left</align>      
      <texture>star#MovingPictures.SelectedMovie.score.rounded.png</texture>
      <visible>facadeview.filmstrip+Control.IsVisible(50)</visible>
    </control>
	
    <!--Top Bar-->
    <control>
      <description>Top Title Background</description>
      <type>image</type>
      <id>0</id>
      <posX>77</posX>
      <posY>11</posY>
      <width>437</width>
      <height>35</height>
      <texture>tvtitlebg.png</texture>
	  <visible>Control.IsVisible(50)|Control.IsVisible(51)</visible>
    </control>
    <control>
      <type>fadelabel</type>
      <description>Top Title</description>
      <id>0</id>
      <posX>493</posX>
      <posY>13</posY>
      <width>350</width>
      <font>mediastream12c</font>
      <align>right</align>
      <visible>yes</visible>
      <label>#MovingPictures.Settings.HomeScreenName</label>
	  <visible>Control.IsVisible(50)|Control.IsVisible(51)</visible>
    </control>
    <control>
      <description>Watched Filtering Indicator - Watched</description>
      <type>image</type>
      <posX>350</posX>
      <posY>450</posY>
      <texture>overlaywatched.png</texture>
      <width>24</width>
      <height>24</height>
      <visible>Control.IsVisible(50)+Control.IsVisible(9)+facadeview.list</visible>
    </control>
    <control>
      <description>Watched Filtering Indicator - UnWatched</description>
      <type>image</type>
      <posX>350</posX>
      <posY>450</posY>
      <texture>overlayunwatched.png</texture>
      <width>24</width>
      <height>24</height>
      <visible>Control.IsVisible(50)+!Control.IsVisible(9)+facadeview.list</visible>
    </control>
    <control>
      <description>Watched Filtering Indicator - Watched</description>
      <type>image</type>
      <posX>686</posX>
      <posY>453</posY>
      <texture>overlaywatched.png</texture>
      <width>24</width>
      <height>24</height>
      <visible>Control.IsVisible(50)+Control.IsVisible(9)+facadeview.filmstrip</visible>
    </control>
    <control>
      <description>Watched Filtering Indicator - UnWatched</description>
      <type>image</type>
      <posX>686</posX>
      <posY>453</posY>
      <texture>overlayunwatched.png</texture>
      <width>24</width>
      <height>24</height>
      <visible>Control.IsVisible(50)+!Control.IsVisible(9)+facadeview.filmstrip</visible>
    </control>
	<control>
      <description>Working Animation</description>
      <type>animation</type>
      <id>13</id>
      <posX>561</posX>
      <posY>350</posY>
      <width>157</width>
      <height>24</height>
      <textures>common.waiting.1.png;common.waiting.2.png;common.waiting.3.png;common.waiting.4.png;common.waiting.5.png;common.waiting.6.png;common.waiting.7.png;common.waiting.8.png;common.waiting.7.png;common.waiting.6.png;common.waiting.5.png;common.waiting.4.png;common.waiting.3.png;common.waiting.2.png</textures>
      <Duration>0:0:03</Duration>
      <keepaspectratio>yes</keepaspectratio>
    </control>    
	<import>movingpictures.mediainfo.xml</import>
    <import>common.time.xml</import>
    <import>common.overlays.xml</import>
	
	<control>
      <description>Parental Controls Lock Indicator (Dummy)</description>
      <type>image</type>
      <id>16</id>
      <posX>1400</posX>
      <posY>1400</posY>  
      <texture>-</texture>
    </control>
	<control>
      <description>Parental Controls Lock Indicator</description>
      <type>image</type>
      <id>1</id>
      <posX>1240</posX>
      <posY>5</posY>
      <width>36</width>
      <height>36</height>
      <texture>parentallock.png</texture>
	  <visible>Control.IsVisible(16)+[Control.IsVisible(50)|Control.IsVisible(51)]</visible>
    </control>	
	
	<control>
		<description>Default Category Image</description>
		<type>image</type>
		<id>1</id>
		<posX>150</posX>
		<posY>330</posY>
		<width>341</width>
		<height>341</height>
		<texture flipY="true" diffuse="Thumb_Mask.png">Categories\Movies.png</texture>
		<keepaspectratio>yes</keepaspectratio>
		<animation effect="fade" time="250">WindowOpen</animation>
		<animation effect="fade" time="250">WindowClose</animation>			
		<visible>Control.IsVisible(51)+!Control.HasThumb(100)</visible>
	</control>
	<control>
		<description>Category Image</description>
		<type>image</type>
		<id>100</id>
		<posX>150</posX>
		<posY>330</posY>
		<width>341</width>
		<height>341</height>
		<texture flipY="true" diffuse="Thumb_Mask.png">Categories\#MovingPictures.SelectedNode.name.png</texture>	
		<keepaspectratio>yes</keepaspectratio>
		<animation effect="fade" time="250">WindowOpen</animation>
		<animation effect="fade" time="250">WindowClose</animation>			
		<visible>Control.IsVisible(51)</visible>
	</control>
	
  </controls>
</window>
