<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>7984</id>
  <defaultcontrol>2</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <define>#header.label:Update Control</define>
  <define>#header.hover:hover_UpdateControl.png</define>
  <define>#header.BG.colordiffuse:ffffffff</define>
  <define>#header.BG.overlay:mainoverlay.png</define>
  <controls>
    <import>common.window.default.xml</import>
    <import>common.time.xml</import>
    <import>common.overlays.xml</import>
	<import>UpdateControl.Menu.xml</import>
	<import>UpdateControl.Info.xml</import>
	<import>UpdateControl.List.xml</import>
    <control>
      <description>Update Action</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>0</posX>
      <posY>325</posY>
      <width>1280</width>
      <align>center</align>
      <font>mediastream12tc</font>
      <label>#UpdateControl.Action</label>
      <animation effect="fade" time="500">WindowOpen</animation>
      <animation effect="fade" time="500">WindowClose</animation>
    </control>
	<!-- need a IsDownloading and IsInstalling property, both default to zero -->
	<control>
      <description>Download Progress</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>0</posX>
      <posY>347</posY>
      <width>1280</width>
      <align>center</align>
      <font>mediastream12tc</font>
      <label>#UpdateControl.DownloadOverallProgress%</label>	  
	  <visible>!string.equals(#UpdateControl.DownloadOverallProgress,100)+[!string.equals(#UpdateControl.DownloadOverallProgress,0)|!string.equals(#UpdateControl.DownloadProgress,0)]</visible>
      <animation effect="fade" time="500">WindowOpen</animation>
      <animation effect="fade" time="500">WindowClose</animation>
    </control>
	<control>
      <description>Install Progress</description>
      <type>fadelabel</type>
      <id>0</id>
      <posX>0</posX>
      <posY>347</posY>
      <width>1280</width>
      <align>center</align>
      <font>mediastream12tc</font>
      <label>#UpdateControl.InstallOverallProgress%</label>
	  <visible>string.equals(#UpdateControl.DownloadOverallProgress,100)</visible>
      <animation effect="fade" time="500">WindowOpen</animation>
      <animation effect="fade" time="500">WindowClose</animation>
    </control>	
    <control>
      <description>Working Animation</description>
      <type>animation</type>
      <id>13</id>
      <posX>565</posX>
      <posY>354</posY>
      <width>1280</width>
      <height>24</height>
      <textures>common.waiting.1.png;common.waiting.2.png;common.waiting.3.png;common.waiting.4.png;common.waiting.5.png;common.waiting.6.png;common.waiting.7.png;common.waiting.8.png;common.waiting.7.png;common.waiting.6.png;common.waiting.5.png;common.waiting.4.png;common.waiting.3.png;common.waiting.2.png</textures>
      <Duration>0:0:03</Duration>
      <keepaspectratio>yes</keepaspectratio>
      <visible>!string.equals(#UpdateControl.Action, )</visible>
      <animation effect="fade" time="500">WindowOpen</animation>
      <animation effect="fade" time="500">WindowClose</animation>
    </control>
  </controls>
</window>