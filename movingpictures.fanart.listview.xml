<?xml version="1.0" encoding="utf-8"?>
<window>
	<controls>

		<control>
			<description>CoverArt</description>
			<id>90</id>
			<type>image</type>
			<posX>15</posX>
			<posY>300</posY>
			<width>238</width>
			<height>356</height>
			<texture flipY="true" diffuse="Thumb_Mask.png">#MovingPictures.Coverart</texture>			
			<visible>facadeview.list+control.isvisible(50)</visible>
		</control>
		<control>
			<description>Rounded cover edges</description>
			<type>image</type>
			<id>91</id>
			<posX>-4</posX>
			<posY>283</posY>
			<width>274</width>
			<height>390</height>
			<texture>#movingpictures_RoundedPosters</texture>			
			<visible>facadeview.list+control.isvisible(50)+Control.HasThumb(90)</visible>      
		</control>
		<control>
            <description>Cover Art Glass Overlay</description>
            <type>image</type>
            <id>0</id>
            <posX>15</posX>
			<posY>300</posY>
            <width>228</width>
            <height>177</height>
            <texture>glassoverlay2.png</texture>			
            <visible>facadeview.list+control.isvisible(50)+!Control.HasThumb(91)+Control.HasThumb(90)</visible>
        </control>
		
		<!-- Watched Icons -->
		<control>
			<description>Movie Watched Icon Background</description>
			<type>image</type>
			<id>0</id>
			<posX>221</posX>
			<posY>350</posY>
			<width>32</width>
			<height>39</height>
			<texture>overlaywubg.png</texture>
			<visible>facadeview.list+control.isvisible(50)+Control.HasThumb(90)</visible>
		</control>
		<control>
			<description>Movie Watched Icon</description>
			<type>image</type>
			<id>0</id>
			<posX>227</posX>
			<posY>353</posY>
			<width>24</width>
			<height>24</height>
			<texture>overlaywatched.png</texture>
		<visible>facadeview.list+control.isvisible(50)+Control.HasThumb(90)+control.isvisible(9)</visible>
		</control>
			<control>
			<description>Series Un-Watched Icon</description>
			<type>image</type>
			<id>0</id>
			<posX>227</posX>
			<posY>353</posY>
			<width>24</width>
			<height>24</height>
			<texture>overlayunwatched.png</texture>
			<visible>facadeview.list+control.isvisible(50)+Control.HasThumb(90)+!control.isvisible(9)</visible>
		</control>
		
		<!-- Movie Details -->
		<control>
			<description>Movie Title Shadow</description>
			<type>label</type>
			<id>0</id>
			<posX>271</posX>
			<posY>421</posY>
			<width>500</width>
			<font>mediastream16tc</font>
			<label>#MovingPictures.SelectedMovie.title</label>
			<align>left</align>
			<textcolor>#shadow.light</textcolor>
			<visible>facadeview.list+control.isvisible(50)</visible>
		</control>
		<control>
			<description>Movie Title</description>
			<type>label</type>
			<id>0</id>
			<posX>270</posX>
			<posY>420</posY>
			<width>500</width>
			<font>mediastream16tc</font>
			<label>#MovingPictures.SelectedMovie.title</label>
			<align>left</align>
			<visible>facadeview.list+control.isvisible(50)</visible>
		</control>
		
		<control>
			<description>Genres Shadow</description>
			<type>label</type>
			<id>0</id>
			<posX>271</posX>
			<posY>448</posY>
			<width>500</width>
			<font>mediastream12tc</font>
			<textcolor>ff989898</textcolor>
			<label>#MovingPictures.SelectedMovie.genres</label>
			<textcolor>#shadow.dark</textcolor>
			<visible>facadeview.list+control.isvisible(50)</visible>
		</control>
		<control>
			<description>Genres</description>
			<type>label</type>
			<id>0</id>
			<posX>270</posX>
			<posY>447</posY>
			<width>500</width>
			<font>mediastream12tc</font>
			<textcolor>ff989898</textcolor>
			<label>#MovingPictures.SelectedMovie.genres</label>
			<visible>facadeview.list+control.isvisible(50)</visible>
		</control>
		
		<control>
			<description>Star Rating Image</description>
			<type>image</type>
			<id>0</id>
			<posX>270</posX>
			<posY>470</posY>
			<width>115</width>
			<height>22</height>      
			<align>left</align>      
			<texture>star#MovingPictures.SelectedMovie.score.rounded.png</texture>
			<visible>facadeview.list+control.isvisible(50)+!string.equals(#MovingPictures.SelectedMovie.score.rounded,)</visible>
		</control>
		<control>
			<description>Rating</description>
			<type>label</type>
			<id>0</id>
			<posX>395</posX>
			<posY>471</posY>
			<width>245</width>
			<textcolor>ffFFFFFF</textcolor>
			<font>mediastream11c</font>
			<label>#MovingPictures.SelectedMovie.score.localized / 10</label>
			<shadowAngle>45</shadowAngle>
            <shadowDistance>2</shadowDistance>
            <shadowColor>#shadow.light</shadowColor>
			<visible>facadeview.list+control.isvisible(50)+!string.equals(#MovingPictures.SelectedMovie.score.rounded,)</visible>
		</control>
		
		<control>
			<description>Summary</description>
			<type>textboxscrollup</type>
			<id>0</id>
			<posX>270</posX>
			<posY>500</posY>
			<width>520</width>
			<height>122</height>
			<textcolor>ffffff</textcolor>
			<seperator>-------------------------------</seperator>
			<font>mediastream11</font>
			<textalign>left</textalign>
			<label>#MovingPictures.SelectedMovie.summary</label>
			<scrollStartDelaySec>12</scrollStartDelaySec>
			<visible>facadeview.list+control.isvisible(50)</visible>
		</control>
		
		<control>
			<description>Runtime Label</description>
			<type>label</type>
			<id>0</id>
			<posX>270</posX>
			<posY>650</posY>
			<textcolor>ff989898</textcolor>
			<font>mediastream12tc</font>
			<label>#MovingPictures.Translation.Runtime.Label</label>
			<visible>facadeview.list+control.isvisible(50)+!string.equals(#MovingPictures.SelectedMovie.runtime.localized.long,)</visible>
		</control>
		<control>
			<description>Runtime</description>
			<type>label</type>
			<id>0</id>
			<posX>270</posX>
			<posY>672</posY>
			<width>300</width>
			<font>mediastream11tc</font>
			<label>#MovingPictures.SelectedMovie.runtime.localized.long</label>
			<visible>facadeview.list+control.isvisible(50)</visible>
		</control>
		
		<control>
			<description>Certification Label</description>
			<type>label</type>
			<id>0</id>
			<posX>550</posX>
			<posY>650</posY>
			<textcolor>ff989898</textcolor>
			<font>mediastream12tc</font>
			<label>#MovingPictures.Translation.Certification.Label</label>
			<visible>facadeview.list+control.isvisible(50)+!string.equals(#MovingPictures.SelectedMovie.certification,)</visible>
		</control>
		<control>
			<description>Certification</description>
			<type>label</type>
			<id>0</id>
			<posX>550</posX>
			<posY>672</posY>
			<width>300</width>
			<font>mediastream11tc</font>
			<label>#MovingPictures.Translation.Rated.Label #MovingPictures.SelectedMovie.certification</label>
			<visible>facadeview.list+control.isvisible(50)+!string.equals(#MovingPictures.SelectedMovie.certification,)</visible>
		</control>

	</controls>
</window>