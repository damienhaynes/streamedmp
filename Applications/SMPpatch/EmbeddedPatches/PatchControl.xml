<?xml version="1.0" encoding="utf-8" ?>
<patches>
  <!-- This defines the minium skin version this patch can run against -->
  <minskinversion>1.2.1.1533</minskinversion>
  <!-- There are 4 possible fields for each patch, 'version' is only needed for the zip file as versions are extracted from .dll and .exe -->
  <!-- Window Plugins -->
  <patch>
    <name>StreamedMPConfig.dll</name>
    <action>install</action>
    <location>windows</location>
  </patch>
  <patch>
    <name>MyLyrics.dll</name>
    <action>install</action>
    <location>windows</location>
  </patch>
  <!-- Process Plugins -->
  <patch>
    <name>FanartHandler.dll</name>
    <action>install</action>
    <location>process</location>
  </patch>
  <patch>
    <name>StreamedMPEditor.dll</name>
    <action>install</action>
    <location>process</location>
  </patch>
  <!-- MediaPortal Binaries (Base Dir) -->
  <patch>
    <name>SMPEditor.exe</name>
    <action>install</action>
    <location>mediaportal</location>
  </patch>
  <patch>
    <name>LyricsEngine.dll</name>
    <action>install</action>
    <location>mediaportal</location>
  </patch>
  <patch>
    <name>TranslateProvider.dll</name>
    <action>install</action>
    <location>mediaportal</location>
  </patch>
  <patch>
    <name>SMPMediaPortalRestart.exe</name>
    <action>mandatoryinstall</action>
    <location>mediaportal</location>
  </patch>
  <!-- Patch Archive -->
  <patch>
    <name>SkinUpdate.zip</name>
    <action>unzip</action>
    <location>temp</location>
    <version>1.2.1.1675</version>
  </patch>
</patches>
