          <font>mediastream11tc</font>
          <action>101</action>
          <onup>11</onup>
          <ondown>13</ondown>
        </control>
        <control>
          <description>basichome button button</description>
          <type>button</type>
          <id>13</id>
          <width>249</width>
          <height>50</height>
          <textXOff>25</textXOff>
          <textYOff>15</textYOff>
          <label>100035</label>
          <font>mediastream11tc</font>
          <action>115</action>
          <onup>12</onup>
          <ondown>14</ondown>
