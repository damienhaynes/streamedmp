        <control>
          <description>Exit button</description>
          <type>button</type>
          <id>14</id>
          <width>249</width>
          <height>50</height>
          <textXOff>25</textXOff>
          <textYOff>15</textYOff>
          <label>4517</label>
          <font>mediastream11tc</font>
          <action>97</action>
          <onup>13</onup>
          <ondown>10</ondown>
