      <buttonY>284</buttonY>
      <buttonwidth>444</buttonwidth>
      <buttonheight>153</buttonheight>
      <textureFocus>-</textureFocus>
      <textureNoFocus>-</textureNoFocus>
      <posX>0</posX>
      <posY>0</posY>
      <width>256</width>
      <height>720</height>
      <dimColor>00ffffff</dimColor>
      <control>
        <description>sub-blade</description>
        <type>image</type>
        <id>0</id>
        <posX>836</posX>
        <posY>0</posY>
        <width>256</width>
        <height>720</height>
        <texture>homebladesub.png</texture>
        <visible>!Control.HasFocus(50)</visible>
      </control>
      <control>
        <type>group</type>
        <description>group element</description>
        <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="0" start="0,0">visible</animation>
        <animation effect="slide" time="0" end="0,0">hidden</animation>
        <posX>836</posX>
        <posY>270</posY>
        <width>256</width>
        <height>720</height>
        <layout>StackLayout</layout>
        <control>
          <description>Shutdown button</description>
          <type>button</type>
          <id>10</id>
          <width>249</width>
          <height>50</height>
          <textXOff>25</textXOff>
          <textYOff>15</textYOff>
          <label>1030</label>
          <font>mediastream11tc</font>
          <action>99</action>
          <onup>14</onup>
          <ondown>11</ondown>
        </control>
        <control>
          <description>settings button</description>
          <type>button</type>
          <id>11</id>
          <width>249</width>
          <height>50</height>
          <textXOff>25</textXOff>
          <textYOff>15</textYOff>
          <label>1048</label>
          <font>mediastream11tc</font>
          <hyperlink>4</hyperlink>
          <onup>10</onup>
          <ondown>12</ondown>
        </control>
        <control>
          <description>videowallpaper button</description>
          <type>button</type>
          <id>12</id>
          <width>249</width>
          <height>50</height>
          <textXOff>25</textXOff>
          <textYOff>15</textYOff>
