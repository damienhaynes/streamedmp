<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>2</id>
  <defaultcontrol>2</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#header.label:1</define>
  <define>#header.image:-</define>
  <define>#header.hover:hover_my pictures.png</define>
  <controls>
    
    <control>
      <description>movies background image</description>
      <animation effect="fade" start="100" end="0" time="250">WindowClose</animation>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>720</height>
      <texture>#header.hover</texture>
    </control>
    
    <control>
      <description>movies overlay image</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>1280</width>
      <height>720</height>
      <texture>tvfanartoverlay.png</texture>
    </control>
    
    <import>common.time.xml</import>
    
    <import>common.window.xml</import>
    
    <control>
      <id>204</id>
      <type>image</type>
      <posX>30</posX>
      <posY>260</posY>
      <width>348</width>
      <height>348</height>
      <keepaspectratio>true</keepaspectratio>
      <texture flipY="true" diffuse="Thumb_Mask.png">#selectedthumb</texture>
      <visible>facadeview.list</visible>
    </control>
    
    <control>
      <id>204</id>
      <type>image</type>
      <posX>755</posX>
      <posY>250</posY>
      <width>348</width>
      <height>348</height>
      <keepaspectratio>true</keepaspectratio>
      <texture flipY="true" diffuse="Thumb_Mask.png">#selectedthumb</texture>
      <visible>facadeview.smallicons | facadeview.largeicons</visible>
    </control>
    
    <control>
      <type>actiongroup</type>
      <description>action menu</description>
      <defaultcontrol>2</defaultcontrol>
      <onexit>50</onexit>
      <posX>0</posX>
      <posY>0</posY>
      <width>100</width>
      <height>568</height>
      <dimColor>00ffffff</dimColor>
      <control>
        <type>image</type>
        <posX>0</posX>
        <posY>0</posY>
        <width>1280</width>
        <height>720</height>
        <texture>black.png</texture>
        <colordiffuse>50ffffff</colordiffuse>
        <visible>!Control.HasFocus(50)</visible>
        <animation effect="fade" time="200">visible</animation>
        <animation effect="fade" time="200">hidden</animation>
      </control>
      <control>
        <type>image</type>
        <posX>0</posX>
        <posY>0</posY>
        <width>256</width>
        <height>720</height>
        <texture>hiddenmenu_left.png</texture>
        <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="100" start="-356,0">visible</animation>
        <animation effect="slide" time="100" end="-356,0">hidden</animation>
      </control>
      <control>
        <type>group</type>
        <description>group element</description>
        <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="100" start="-356,0">visible</animation>
        <animation effect="slide" time="100" end="-356,0">hidden</animation>
        <posX>0</posX>
        <posY>220</posY>
        <width>256</width>
        <height>720</height>
        <layout>StackLayout</layout>
        <control>
          <description>View-As</description>
          <type>button</type>
          <id>2</id>
          <label>100</label>
          <onright>50</onright>
          <onup>17</onup>
        </control>
        <control>
          <description>Sort</description>
          <type>sortbutton</type>
          <id>3</id>
          <label>103</label>
          <onright>50</onright>
        </control>
        <control>
          <description>Switch View</description>
          <type>button</type>
          <id>4</id>
          <label>457</label>
          <onright>50</onright>
        </control>
        <control>
          <description>SlideShow button</description>
          <type>button</type>
          <id>6</id>
          <label>108</label>
          <onright>50</onright>
        </control>
        <control>
          <description>Recursive Slideshow</description>
          <type>button</type>
          <id>7</id>
          <label>361</label>
          <onright>50</onright>
          <ondown>99</ondown>
        </control>
      </control>
    </control>
    
    <import>common.facade.pictures.xml</import>
    
  </controls>
</window>