<?xml version="1.0" encoding="UTF-8"?>
<window>
  <id>602</id>
  <defaultcontrol>13</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <define>#percentage:#TV.View.Percentage</define>
  <define>#currentremaining:#TV.View.stop</define>
  <define>#currentplaytime:#TV.View.start</define>
  <controls>
    <control>
      <description>dummy to fix images disappearing on more than 2x seeking (MP BUG)</description>
      <type>image</type>
      <id>0</id>
      <posX>2000</posX>
      <posY>2000</posY>
      <width>10</width>
      <height>10</height>
      <texture>-</texture>
      <visible>player.forwarding|player.rewinding</visible>
    </control>
 
    <control>
      <description>background (paused)</description>
      <type>image</type>
      <id>0</id>
      <posX>0</posX>
      <posY>503</posY>
      <width>1280</width>
      <height>217</height>
      <texture>osdbackground.png</texture>
      <visible>!window.isosdvisible+[player.paused|control.isvisible(10)|control.isvisible(11)|control.isvisible(12)|player.forwarding|player.rewinding]</visible>
    </control>
     <control>
      <description>TV Logo background</description>
      <type>image</type>
      <posX>6</posX>
      <posY>470</posY>
      <width>170</width>
      <height>170</height>
      <texture>imagebg.png</texture>
      <keepaspectratio>no</keepaspectratio>      
      <visible>!window.isosdvisible+[player.paused|control.isvisible(10)|control.isvisible(11)|control.isvisible(12)|player.forwarding|player.rewinding]</visible>
    </control>     

    <control>
      <description>TV Logo</description>
      <type>image</type>
      <id>1</id>
      <posX>16</posX>
      <posY>480</posY>
      <width>150</width>
      <height>150</height>
      <texture>#TV.View.thumb</texture>
      <keepaspectratio>yes</keepaspectratio>        
      <visible>!window.isosdvisible+[player.paused|control.isvisible(10)|control.isvisible(11)|control.isvisible(12)|player.forwarding|player.rewinding]</visible>
    </control> 
        <control>
      <description>On tv NOW</description>
      <id>36</id>
      <type>textbox</type>
      <width>474</width>
      <height>25</height>
      <posX>200</posX>
      <posY>540</posY>      
      <label>#TV.View.start #TV.View.title</label>
      <font>mediastream14tc</font>       
      <visible>!window.isosdvisible+[player.paused|control.isvisible(10)|control.isvisible(11)|control.isvisible(12)|player.forwarding|player.rewinding]</visible>
    </control>      

    <control>
      <description>On tv NEXT</description>
      <type>textbox</type>
      <width>474</width>
      <height>24</height>
      <posX>200</posX>
      <posY>660</posY>      
      <label>#TV.Next.start #TV.Next.title</label>
      <font>mediastream11tc</font>
      <textcolor>ff888888</textcolor>      
      <visible>!window.isosdvisible+[player.paused|control.isvisible(10)|control.isvisible(11)|control.isvisible(12)|player.forwarding|player.rewinding]</visible>
    </control>         

    <control>
      <description>Plot</description>
      <type>textboxscrollup</type>      
      <id>38</id>
      <posX>280</posX>
      <posY>570</posY>
      <width>780</width>
      <height>75</height>
      <seperator>__________________________________________________________________________________________________________________________________________________________________________________________</seperator>
      <label>#TV.View.description</label>
      <font>mediastream12</font>       
      <visible>!window.isosdvisible+[player.paused|control.isvisible(10)|control.isvisible(11)|control.isvisible(12)|player.forwarding|player.rewinding]</visible>
    </control>
        

