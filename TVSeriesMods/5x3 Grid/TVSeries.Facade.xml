		<control>
			<type>group</type>
			<id>28</id>
			<layout>StackLayout</layout>
			<animation effect="fade" time="250" delay="0">WindowClose</animation>
			<control>
				<type>facadeview</type>
				<id>50</id>
				<control>					
					<type>listcontrol</type>
					<subtype>album</subtype>
					<id>50</id>
				</control>
				<control>
					<description>Wide Banners (5x3) View</description>
					<type>thumbnailpanel</type>
					<id>50</id>
					<onleft>2</onleft>
					<onright>2</onright>
					<posX>30</posX>
					<posY>66</posY>
					<width>1270</width>
					<height>470</height>
					<imageFolder>-</imageFolder>
					<imageFolderFocus>widebannerborder.png</imageFolderFocus>
					<keepaspectratio>no</keepaspectratio>
					<enableFocusZoom>no</enableFocusZoom>
					<scrollOffset>1</scrollOffset>
					<dimColor>30ffffff</dimColor>
					<!-- margin -->
					<itemWidthBig>407</itemWidthBig>
					<itemHeightBig>85</itemHeightBig>
					<!-- frame texture -->
					<textureWidthBig>405</textureWidthBig>
					<textureHeightBig>85</textureHeightBig>
					<!-- wide banners -->
					<thumbWidthBig>390</thumbWidthBig>
					<thumbHeightBig>74</thumbHeightBig>
					<thumbPosXBig>7</thumbPosXBig>
					<thumbPosYBig>5</thumbPosYBig>          
					<thumbZoom>no</thumbZoom>
					<!-- text (when there is no banner) -->
					<textXOff>60</textXOff>
					<textYOff>25</textYOff>					
					<!-- Spin Controls -->
					<spinCanFocus>no</spinCanFocus>
					<spinWidth>50</spinWidth>
					<spinHeight>37</spinHeight>					
					<spinPosX>1132</spinPosX>
					<spinPosY>503</spinPosY>
					<spinAlign>Right</spinAlign>
					<spinColor>ff006698</spinColor>				
					<textureUp>arrow_round_up_nofocus.png</textureUp>
					<textureDown>arrow_round_down_nofocus.png</textureDown>
					<textureUpFocus>arrow_round_up_focus.png</textureUpFocus>
					<textureDownFocus>arrow_round_down_focus.png</textureDownFocus>
				</control>
				<control>
					<description>Series/Season Filmstrip view</description>
                    <type>filmstrip</type>
                    <id>50</id>
                    <onup>2</onup>
                    <onleft>50</onleft>
                    <posX>12</posX>
                    <posY>512</posY>
					<height>220</height>
                    <width>1280</width>
                    <scrollOffset>4</scrollOffset>
                    <itemWidth>142</itemWidth>
                    <itemHeight>156</itemHeight>
                    <textureWidth>120</textureWidth>
                    <textureHeight>170</textureHeight>
                    <thumbWidth>106</thumbWidth>
                    <thumbHeight>156</thumbHeight>
                    <thumbPosX>7</thumbPosX>
                    <thumbPosY>7</thumbPosY>
                    <thumbs flipY="true" diffuse="diffusemirrorwide.png"/>
					<thumbAnimation effect="zoom" start="100,100" end="120,120" tween="quadratic" time="0">focus</thumbAnimation>
                    <InfoImage></InfoImage>
                    <imageFolder>-</imageFolder>
                    <imageFolderFocus>thumbborder.png</imageFolderFocus>
                    <frame>-</frame>
                    <frameFocus>thumbborder.png</frameFocus>
                    <showFrame>no</showFrame>
                    <showFolder>yes</showFolder>
                    <showBackGround>no</showBackGround>
                    <showInfoImage>no</showInfoImage>                    
                    <!-- Spin Controls -->
                    <spinWidth>50</spinWidth>
                    <spinHeight>37</spinHeight>
                    <spinPosX>1175</spinPosX>
                    <spinPosY>681</spinPosY>
                    <spinAlign>Right</spinAlign>
                    <spinColor>ff006698</spinColor>
                    <textureUp>arrow_round_up_nofocus.png</textureUp>
                    <textureDown>arrow_round_down_nofocus.png</textureDown>
                    <textureUpFocus>arrow_round_up_focus.png</textureUpFocus>
                    <textureDownFocus>arrow_round_down_focus.png</textureDownFocus>
				</control>
				<control>
					<description>Textlist (series and/or seasons if set and Episodes)</description>
                    <type>listcontrol</type>
                    <id>50</id>
                    <onleft>2</onleft>
                    <onright>2</onright>
                    <posX>#posX</posX>
                    <posY>310</posY>
                    <height>410</height>
                    <IconXOff>#IconXOff</IconXOff>
                    <IconYOff>#IconYOff</IconYOff>
                    <textXOff>#textXOff</textXOff>
                    <textYOff>10</textYOff>
					<dimColor>50ffffff</dimColor>
                    <!-- Watched/Unwatched icons -->
                    <itemWidth>72</itemWidth>
                    <itemHeight>18</itemHeight>
                    <textXOff2>#textXOff2</textXOff2>
                    <textYOff2>10</textYOff2>
                    <textXOff3>#textXOff3</textXOff3>
                    <textYOff3>12</textYOff3>
                    <font2>mediastream9c</font2>
                    <font3>mediastream9c</font3>
                    <textureFocus>#textureFocus</textureFocus>
                    <!-- Spin Controls -->
                    <spinWidth>50</spinWidth>
                    <spinHeight>37</spinHeight>
                    <spinPosX>1175</spinPosX>
                    <spinPosY>681</spinPosY>
                    <spinAlign>Right</spinAlign>
                    <spinColor>ff006698</spinColor>
                    <textureUp>arrow_round_up_nofocus.png</textureUp>
                    <textureDown>arrow_round_down_nofocus.png</textureDown>
                    <textureUpFocus>arrow_round_up_focus.png</textureUpFocus>
                    <textureDownFocus>arrow_round_down_focus.png</textureDownFocus>
				</control>
			</control>
		</control>
	
	</controls>
