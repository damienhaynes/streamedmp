<?xml version="1.0" encoding="utf-8"?>
<window>
  <controls>
    <control>
      <type>listcontrol</type>
      <description>videolist</description>
      <id>4</id>
      <posX>800</posX>
      <posY>300</posY>
      <width>480</width>
      <height>210</height>
      <textXOff2>0</textXOff2>
      <IconYOff>10</IconYOff>
      <textYOff>5</textYOff>
      <textXOff>9</textXOff>
      <textureHeight>42</textureHeight>
      <IconXOff>15</IconXOff>
      <spinPosX>1215</spinPosX>
      <spinPosY>355</spinPosY>
      <textYOff2>5</textYOff2>
      <onup>4</onup>
      <ondown>4</ondown>
      <onright>4</onright>
      <onleft>4</onleft>
      <visible>!Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>group element</description>
      <id>1</id>
      <type>group</type>
      <layout>StackLayout(30)</layout>
      <posX>875</posX>
      <posY>400</posY>
      <width>425</width>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <dimColor>FFFFFFFF</dimColor>
      <textcolor>FFFFFFFF</textcolor>
      <visible>!Control.IsVisible(50)</visible>
      <control>
        <id>1</id>
        <description>Video Title</description>
        <type>label</type>
        <label>#MyTrailers.Video.Title</label>
      </control>
      <control>
        <description>Video Published</description>
        <type>label</type>
        <width>475</width>
        <id>1</id>
        <label>Published on #MyTrailers.Video.Published</label>
        <font>mediastream11</font>
        <textcolor>FFFFFFFF</textcolor>
      </control>
      <control>
        <id>1</id>
        <description>Video Description</description>
        <type>label</type>
        <textcolor>FFFFFFFF</textcolor>
        <label>#MyTrailers.Video.Description</label>
      </control>
      <control>
        <description>Video image</description>
        <type>image</type>
        <id>1</id>
        <width>425</width>
        <height>200</height>
        <texture>#MyTrailers.Video.Image</texture>
        <keepaspectratio>yes</keepaspectratio>
      </control>
    </control>
    <control>
      <description>MyTrailers.Details.Title</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>800</posX>
      <posY>220</posY>
      <font>mediastream14tc</font>
      <width>420</width>
      <label>#MyTrailers.Details.Title</label>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <visible>!Control.IsVisible(50)</visible>
    </control>
    <control>
      <description>group element</description>
      <id>1</id>
      <type>group</type>
      <layout>StackLayout(30)</layout>
      <posX>350</posX>
      <posY>220</posY>
      <width>475</width>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <dimColor>FFFFFFFF</dimColor>
      <textcolor>FFFFFFFF</textcolor>
      <visible>!Control.IsVisible(50)</visible>
      <control>
        <description>ReleaseDate txt</description>
        <type>label</type>
        <id>1</id>
        <width>475</width>
        <label>Releasedate:</label>
        <textcolor>ff909090</textcolor>
      </control>
      <control>
        <description>ReleaseDate value</description>
        <type>label</type>
        <width>475</width>
        <id>1</id>
        <label>#MyTrailers.Details.ReleaseDate</label>
      </control>
      <control>
        <description>Genre txt</description>
        <type>label</type>
        <id>1</id>
        <width>475</width>
        <label>Genre:</label>
        <textcolor>ff909090</textcolor>
      </control>
      <control>
        <description>Genre value</description>
        <type>label</type>
        <id>1</id>
        <width>475</width>
        <label>#MyTrailers.Details.Genre</label>
      </control>
      <control>
        <description>Director txt</description>
        <type>label</type>
        <id>1</id>
        <width>475</width>
        <label>#MyTrailers.Details.Label.Director</label>
        <textcolor>ff909090</textcolor>
      </control>
      <control>
        <description>Director value</description>
        <type>label</type>
        <id>1</id>
        <width>475</width>
        <label>#MyTrailers.Details.Director</label>
      </control>
      <control>
        <description>Studio txt</description>
        <type>label</type>
        <id>1</id>
        <width>475</width>
        <label>#MyTrailers.Details.Label.Studio</label>
        <textcolor>ff909090</textcolor>
      </control>
      <control>
        <description>Studio value</description>
        <type>label</type>
        <id>1</id>
        <width>475</width>
        <label>#MyTrailers.Details.Studio</label>
      </control>
      <control>
        <description>Cast txt</description>
        <type>label</type>
        <id>1</id>
        <width>475</width>
        <label>#MyTrailers.Details.Label.Cast</label>
        <textcolor>ff909090</textcolor>
      </control>
      <control>
        <description>Cast value</description>
        <type>textboxscrollup</type>
        <id>1</id>
        <posY>500</posY>
        <font>mediastream11</font>
        <label>#MyTrailers.Details.Cast</label>
      </control>
      <control>
        <description>Summary</description>
        <type>textboxscrollup</type>
        <id>1</id>
        <posY>12</posY>
        <height>150</height>
        <width>850</width>
        <seperator>-----------------------------------------------------------------------------------</seperator>
        <font>mediastream11</font>
        <label>#MyTrailers.Details.Description</label>
      </control>
    </control>
    <control>
      <description>Trailer Poster</description>
      <type>image</type>
      <id>21</id>
      <posX>40</posX>
      <posY>220</posY>
      <width>260</width>
      <height>366</height>
      <keepaspectratio>yes</keepaspectratio>
      <texture flipY="true" diffuse="Thumb_Mask.png">#MyTrailers.Details.Poster</texture>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <visible>!Control.IsVisible(50)</visible>
      <animation effect="rotatey" start="-55" end="-55" center="15,0" time="0" reversible="false">visible</animation>
    </control>
  </controls>
</window>