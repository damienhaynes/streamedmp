<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>87288</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#Fanart.1:#Trakt.RecentShouts.Fanart.1</define>
  <define>#Fanart.2:#Trakt.RecentShouts.Fanart.2</define>
  <controls>
    <control>
      <description>BG</description>
      <type>image</type>
      <id>1</id>
      <texture>BH Videos.jpg</texture>
      <width>1280</width>
      <height>720</height>
      <colordiffuse>90ffffff</colordiffuse>
    </control>
    <import>Trakt.Common.Fanart.xml</import>
    <import>common.window.xml</import>
    <import>common.time.xml</import>
    <control>
      <description>General Overlay</description>
      <id>0</id>
      <type>image</type>
      <posX>0</posX>
      <posY>30</posY>
      <width>1280</width>
      <height>720</height>
      <texture>general_overlay.png</texture>
    </control>
    <control>
      <description>Current View</description>
      <type>label</type>
      <id>0</id>
      <posX>29</posX>
      <posY>10</posY>
      <width>866</width>
      <font>font11</font>
      <textcolor>ff6FAFE1</textcolor>
      <label>#Trakt.Translation.RecentShouts.Label | #(iif(eq(#Trakt.User.FullName,''),'#Trakt.User.Username','#Trakt.User.FullName'))</label>
      <align>left</align>
    </control>
    <control>
      <description>group element</description>
      <type>group</type>
      <control>
        <type>facadeview</type>
        <id>50</id>
        <control>
          <description>listcontrol</description>
          <type>listcontrol</type>
          <id>50</id>
          <height>360</height>
          <width>1066</width>
          <onleft>2</onleft>
          <onright>50</onright>
          <spinCanFocus>no</spinCanFocus>
          <PinIconXOff>1020</PinIconXOff>
          <textXOff2>1010</textXOff2>
        </control>
      </control>
    </control>
    <!-- Hidden Menu -->
    <control>
      <type>actiongroup</type>
      <description>action menu</description>
      <defaultcontrol>2</defaultcontrol>
      <onexit>50</onexit>
      <buttonX>0</buttonX>
      <buttonY>-60</buttonY>
      <buttonwidth>105</buttonwidth>
      <buttonheight>720</buttonheight>
      <textureFocus>-</textureFocus>
      <textureNoFocus>Action_nofocus.png</textureNoFocus>
      <width>274</width>
      <height>900</height>
      <dimColor>00ffffff</dimColor>
      <control>
        <type>image</type>
        <id>0</id>
        <width>1280</width>
        <height>720</height>
        <texture>white.png</texture>
        <colordiffuse>201e90ff</colordiffuse>
      </control>
      <control>
        <type>image</type>
        <posX>25</posX>
        <posY>78</posY>
        <width>373</width>
        <height>591</height>
        <texture>Backslide.png</texture>
        <colorDiffuse>ffffffff</colorDiffuse>
        <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="70" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="70" end="-300,0" reversible="false">hidden</animation>
      </control>
      <control>
        <description>group element</description>
        <type>group</type>
        <animation effect="slide" time="70" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="70" end="-300,0" reversible="false">hidden</animation>
        <visible>!Control.HasFocus(50)</visible>
        <posX>49</posX>
        <posY>121</posY>
        <layout>StackLayout</layout>
        <visible>!Control.HasFocus(50)</visible>
        <control>
          <description>button group</description>
          <type>group</type>
          <posX>60</posX>
          <posY>121</posY>
          <width>293</width>
          <layout>StackLayout</layout>
          <visible>!Control.HasFocus(50)</visible>
          <animation effect="slide" time="70" start="-300,0" reversible="false">visible</animation>
          <animation effect="slide" time="70" end="-300,0" reversible="false">hidden</animation>
          <control>
            <description>Toggle Hide Spoilers</description>
            <type>checkbutton</type>
            <id>2</id>
            <width>293</width>
            <label>-</label>
            <onleft>2</onleft>
            <onright>50</onright>
          </control>
        </control>
      </control>
    </control>
    <control>
      <description>Avatar</description>
      <type>image</type>
      <id>1</id>
      <posX>105</posX>
      <posY>500</posY>
      <height>110</height>
      <width>110</width>
      <keepaspectratio>yes</keepaspectratio>
      <zoom>yes</zoom>
      <texture>#Trakt.User.AvatarFileName</texture>
    </control>
    <control>
      <description>Join Date | Location</description>
      <id>0</id>
      <label>#(iif(eq(#Trakt.User.FullName,''),'#Trakt.User.Username','#Trakt.User.FullName')) | #Trakt.User.Location</label>
      <type>label</type>
      <posX>250</posX>
      <posY>495</posY>
      <width>893</width>
      <textcolor>ff6FAFE1</textcolor>
      <font>font13</font>
      <visible>!string.equals(#Trakt.User.JoinDate,)</visible>
    </control>
    <control>
      <description>Shout</description>
      <type>textboxscrollup</type>
      <id>0</id>
      <posX>250</posX>
      <posY>525</posY>
      <width>893</width>
      <height>70</height>
      <font>font14</font>
      <label>#Trakt.Shout.Text</label>
      <scrollStartDelaySec>12</scrollStartDelaySec>
      <seperator>-----------------------------------------------------------------------------</seperator>
    </control>
  </controls>
</window>