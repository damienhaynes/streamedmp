<window>
  <id>5623</id>
  <defaultcontrol>2</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#header.label:Netflix Manager</define>
  <define>#header.hover:hover_netflixmanager.png</define>
  <controls>
    <import>common.window.xml</import>
    <import>common.time.xml</import>
    <control>
      <type>group</type>
      <description>group element</description>
      <animation effect="slide" time="10" end="-300,0">WindowClose</animation>
      <animation effect="slide" time="10" start="-300,0">WindowOpen</animation>
      <posX>20</posX>
      <posY>80</posY>
      <layout>StackLayout</layout>
      <control>
        <description>Play Now Status</description>
        <type>button</type>
        <id>11</id>
        <label>Watch Now Status</label>
        <onleft>11</onleft>
        <onright>5</onright>
        <onup>9</onup>
        <ondown>10</ondown>
      </control>
      <control>
        <description>Play now Queue</description>
        <type>button</type>
        <id>10</id>
        <label>Watch Now</label>
        <onleft>10</onleft>
        <onright>5</onright>
        <onup>11</onup>
        <ondown>2</ondown>
      </control>
      <control>
        <description>Refresh Queue</description>
        <type>button</type>
        <id>2</id>
        <label>Refresh Queue</label>
        <onleft>2</onleft>
        <onright>5</onright>
        <onup>10</onup>
        <ondown>3</ondown>
      </control>
      <control>
        <description>Get Recomendations</description>
        <type>button</type>
        <id>3</id>
        <label>Recomendations</label>
        <onleft>3</onleft>
        <onright>5</onright>
        <onup>2</onup>
        <ondown>4</ondown>
      </control>
      <control>
        <description>RSS Feeds</description>
        <type>button</type>
        <id>4</id>
        <label>Browse</label>
        <onleft>4</onleft>
        <onright>5</onright>
        <onup>3</onup>
        <ondown>8</ondown>
      </control>
      <control>
        <description>Search</description>
        <type>button</type>
        <id>8</id>
        <label>Search</label>
        <onleft>8</onleft>
        <onright>5</onright>
        <onup>4</onup>
        <ondown>9</ondown>
      </control>
      <control>
        <description>Award Winners</description>
        <type>button</type>
        <id>9</id>
        <label>Award Winners</label>
        <onleft>9</onleft>
        <onright>5</onright>
        <onup>8</onup>
        <ondown>11</ondown>
      </control>
    </control>
    <control>
      <type>listcontrol</type>
      <description>listview</description>
      <id>5</id>
      <spinPosY>430</spinPosY>
      <height>420</height>
      <onleft>10</onleft>
      <onright>11</onright>
      <onup>11</onup>
      <ondown>11</ondown>
    </control>
    <control>
      <type>image</type>
      <id>1</id>
      <posX>310</posX>
      <posY>415</posY>
      <width>231</width>
      <height>332</height>
      <texture>movie_preview_thumb_background.png</texture>
      <visible>Control.hasthumb(6)</visible>
    </control>
    <control>
      <type>image</type>
      <description>Cover Art Image</description>
      <id>6</id>
      <posX>331</posX>
      <posY>435</posY>
      <width>180</width>
      <height>280</height>
      <texture>#thumb</texture>
      <keepaspectratio>no</keepaspectratio>
      <centered>yes</centered>
    </control>
    <control>
      <type>textboxscrollup</type>
      <description>Description</description>
      <id>7</id>
      <posX>540</posX>
      <posY>430</posY>
      <width>670</width>
      <height>280</height>
      <seperator>----------------------------------------------------------------------------------------------</seperator>
      <font>font12</font>
    </control>
  </controls>
</window>